<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:a="clr-namespace:Photobooth.Adorners">

  <a:DoubleFormatConverter x:Key="doubleFormatConverter"/>
  <a:SimplePixelConverter x:Key="simplePixelConverter"/>

  <Style TargetType="{x:Type a:SizeChrome}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type a:SizeChrome}">
          <Grid SnapsToDevicePixels="True">
            <Path Stroke="#FF0080FF"
                  StrokeThickness="1"
                  Height="10"
                  VerticalAlignment="Bottom"
                  Margin="-2,0,-2,-15"
                  Stretch="Fill"
                  Data="M0,0 0,10 M 0,5 100,5 M 100,0 100,10"/>
            <TextBlock Text="{Binding Path=Width, Converter={StaticResource simplePixelConverter}}"
                       Background="#FF1A2A3A"
                       Padding="4,1,4,1"
                       Foreground="#FFAACCFF"
                       FontWeight="Bold"
                       FontSize="11"
                       Margin="0,0,0,-20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
            <Path Stroke="#FF0080FF"
                  StrokeThickness="1"
                  Width="10"
                  HorizontalAlignment="Right"
                  Margin="0,-2,-15,-2"
                  Stretch="Fill"
                  Data="M5,0 5,100 M 0,0 10,0 M 0,100 10,100"/>
            <TextBlock Text="{Binding Path=Height, Converter={StaticResource simplePixelConverter}}"
                       Background="#FF1A2A3A"
                       Foreground="#FFAACCFF"
                       FontWeight="Bold"
                       FontSize="11"
                       Padding="4,1,4,1"
                       Margin="0,0,-20,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
              <TextBlock.LayoutTransform>
                <RotateTransform Angle="90" CenterX="1" CenterY="0.5"/>
              </TextBlock.LayoutTransform>
            </TextBlock>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>