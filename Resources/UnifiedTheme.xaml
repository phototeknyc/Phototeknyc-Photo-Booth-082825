<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    UNIFIED SURFACE THEME - Based on SurfacePhotoBoothWindow
    Use these colors consistently across ALL components
    -->

    <!-- Base Colors -->
    <Color x:Key="SurfacePrimary">#0A0E27</Color>        <!-- Deep navy blue -->
    <Color x:Key="SurfaceSecondary">#1A1E37</Color>      <!-- Medium navy -->
    <Color x:Key="SurfaceBackground">#1E1E1E</Color>     <!-- Main background -->
    <Color x:Key="SurfacePanel">#2A2E47</Color>          <!-- Panel/container background -->
    
    <!-- Accent Colors -->
    <Color x:Key="SurfaceAccentCyan">#00D9FF</Color>     <!-- Primary accent -->
    <Color x:Key="SurfaceAccentPurple">#7928CA</Color>   <!-- Secondary accent -->
    <Color x:Key="SurfaceAccentPink">#FF0080</Color>     <!-- Tertiary accent -->
    <Color x:Key="SurfaceAccentSuccess">#00FF88</Color>  <!-- Success/positive -->
    <Color x:Key="SurfaceAccentDanger">#E74C3C</Color>   <!-- Error/danger -->
    
    <!-- Text Colors -->
    <Color x:Key="SurfaceTextPrimary">#FFFFFF</Color>    <!-- Main text -->
    <Color x:Key="SurfaceTextSecondary">#B8BCC8</Color>  <!-- Muted text -->
    <Color x:Key="SurfaceTextTertiary">#8B92A5</Color>   <!-- Disabled text -->
    
    <!-- Interactive Colors -->
    <Color x:Key="SurfaceButtonHover">#3A3E57</Color>    <!-- Button hover -->
    <Color x:Key="SurfaceButtonPressed">#4A4E67</Color>  <!-- Button pressed -->
    <Color x:Key="SurfaceBorder">#404040</Color>         <!-- Border/separator -->
    <Color x:Key="SurfaceInput">#2A2E47</Color>          <!-- Input backgrounds -->

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="SurfacePrimaryBrush" Color="{StaticResource SurfacePrimary}"/>
    <SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="{StaticResource SurfaceSecondary}"/>
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackground}"/>
    <SolidColorBrush x:Key="SurfacePanelBrush" Color="{StaticResource SurfacePanel}"/>
    
    <SolidColorBrush x:Key="SurfaceAccentCyanBrush" Color="{StaticResource SurfaceAccentCyan}"/>
    <SolidColorBrush x:Key="SurfaceAccentPurpleBrush" Color="{StaticResource SurfaceAccentPurple}"/>
    <SolidColorBrush x:Key="SurfaceAccentPinkBrush" Color="{StaticResource SurfaceAccentPink}"/>
    <SolidColorBrush x:Key="SurfaceAccentSuccessBrush" Color="{StaticResource SurfaceAccentSuccess}"/>
    <SolidColorBrush x:Key="SurfaceAccentDangerBrush" Color="{StaticResource SurfaceAccentDanger}"/>
    
    <SolidColorBrush x:Key="SurfaceTextPrimaryBrush" Color="{StaticResource SurfaceTextPrimary}"/>
    <SolidColorBrush x:Key="SurfaceTextSecondaryBrush" Color="{StaticResource SurfaceTextSecondary}"/>
    <SolidColorBrush x:Key="SurfaceTextTertiaryBrush" Color="{StaticResource SurfaceTextTertiary}"/>
    
    <SolidColorBrush x:Key="SurfaceButtonHoverBrush" Color="{StaticResource SurfaceButtonHover}"/>
    <SolidColorBrush x:Key="SurfaceButtonPressedBrush" Color="{StaticResource SurfaceButtonPressed}"/>
    <SolidColorBrush x:Key="SurfaceBorderBrush" Color="{StaticResource SurfaceBorder}"/>
    <SolidColorBrush x:Key="SurfaceInputBrush" Color="{StaticResource SurfaceInput}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="SurfaceHeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource SurfacePrimary}" Offset="0"/>
        <GradientStop Color="{StaticResource SurfaceSecondary}" Offset="0.5"/>
        <GradientStop Color="{StaticResource SurfacePrimary}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SurfaceAccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SurfaceAccentCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource SurfaceAccentPurple}" Offset="0.5"/>
        <GradientStop Color="{StaticResource SurfaceAccentPink}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SurfaceContentGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource SurfacePrimary}" Offset="0"/>
        <GradientStop Color="#0F1329" Offset="0.5"/>
        <GradientStop Color="{StaticResource SurfaceSecondary}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Common Styles -->
    
    <!-- Unified Button Style -->
    <Style x:Key="SurfaceButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfacePanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource SurfaceButtonHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource SurfaceButtonPressedBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Unified TextBlock Style -->
    <Style x:Key="SurfaceTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Unified TextBox Style -->
    <Style x:Key="SurfaceTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceInputBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Unified ComboBox Style -->
    <Style x:Key="SurfaceComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SurfaceInputBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Unified Border Style -->
    <Style x:Key="SurfaceBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfacePanelBrush}"/>
    </Style>

</ResourceDictionary>