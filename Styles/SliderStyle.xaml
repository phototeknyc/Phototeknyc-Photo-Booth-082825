<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Slider Style -->
    <Style x:Key="SliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="#444444"/>
        <Setter Property="Foreground" Value="#4A90E2"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- Track -->
                        <Border x:Name="TrackBackground" 
                                Grid.Row="1" 
                                Height="4" 
                                Background="#555555" 
                                BorderBrush="#666666" 
                                BorderThickness="1" 
                                CornerRadius="2" 
                                Margin="5,0"/>
                        
                        <Canvas Grid.Row="1" Margin="5,0">
                            <!-- Progress Track -->
                            <Rectangle x:Name="PART_SelectionRange" 
                                       Height="4" 
                                       Fill="{TemplateBinding Foreground}" 
                                       Visibility="Hidden" />
                        </Canvas>
                        
                        <!-- Thumb -->
                        <Track Grid.Row="1" x:Name="PART_Track" Margin="5,0">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Command="{x:Static Slider.DecreaseLarge}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Rectangle Fill="{TemplateBinding Foreground}" Height="4" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Command="{x:Static Slider.IncreaseLarge}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Rectangle Fill="Transparent" Height="4" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>
                            
                            <Track.Thumb>
                                <Thumb x:Name="Thumb">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="White" 
                                                    BorderBrush="{TemplateBinding Foreground}" 
                                                    BorderThickness="2" 
                                                    CornerRadius="8" 
                                                    Height="16" 
                                                    Width="16" />
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter TargetName="TrackBackground" Property="Background" Value="#333333"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Compact Slider Style for Text Effects -->
    <Style x:Key="CompactSliderStyle" TargetType="Slider" BasedOn="{StaticResource SliderStyle}">
        <Setter Property="Height" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <!-- Track -->
                        <Border x:Name="TrackBackground" 
                                Height="3" 
                                Background="#555555" 
                                BorderBrush="#666666" 
                                BorderThickness="1" 
                                CornerRadius="1.5" 
                                Margin="5,0"/>
                        
                        <Canvas Margin="5,0">
                            <Rectangle x:Name="PART_SelectionRange" 
                                       Height="3" 
                                       Fill="{TemplateBinding Foreground}" 
                                       Visibility="Hidden" />
                        </Canvas>
                        
                        <!-- Thumb -->
                        <Track x:Name="PART_Track" Margin="5,0">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Command="{x:Static Slider.DecreaseLarge}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Rectangle Fill="{TemplateBinding Foreground}" Height="3" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{x:Null}" Command="{x:Static Slider.IncreaseLarge}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Rectangle Fill="Transparent" Height="3" />
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.IncreaseRepeatButton>
                            
                            <Track.Thumb>
                                <Thumb x:Name="Thumb">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="White" 
                                                    BorderBrush="{TemplateBinding Foreground}" 
                                                    BorderThickness="2" 
                                                    CornerRadius="7" 
                                                    Height="14" 
                                                    Width="14" />
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter TargetName="TrackBackground" Property="Background" Value="#333333"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>