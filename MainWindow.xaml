<Window x:Class="Photobooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DesignerCanvas.Controls;assembly=DesignerCanvas"
        xmlns:canvas="clr-namespace:Photobooth.Design.Canvas"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Template Designer"
        Background="#303030"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="False"
        Initialized="Window_Initialized"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Unspecified"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/DesignerItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <!--start_Button change hover effect-->
     
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation buttons overlay for touch devices -->
        <StackPanel Grid.Column="1" 
                    Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Panel.ZIndex="1000">
            
            <!-- Back to Home button -->
            <Button x:Name="btnBackToHome" 
                    Content="🏠 Home" 
                    FontSize="16"
                    FontWeight="Bold"
                    Width="100" 
                    Height="50"
                    Margin="0,0,10,0"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnBackToHome_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="25">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#21618C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Close button -->
            <Button x:Name="btnClose" 
                Content="✕" 
                FontSize="24"
                FontWeight="Bold"
                Width="50" 
                Height="50"
                Background="#E74C3C"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="btnClose_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#A93226"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        </StackPanel>
        
        <Border Grid.Column="0" Background="LightGray">
            <!-- Add your buttons and controls here -->
            <StackPanel>
                <Button x:Name="btnImport" Content="Import" Click="btnImport_Click"/>
                <Button x:Name="btnExport" Content="Export" Click="btnExport_Click"/>
                <Button x:Name="btnClear" Content="Clear" Click="btnClear_Click"/>
                <Button x:Name="btnPrint" Content="Print" Click="btnPrint_Click"/>
                <Button x:Name="btnPlaceholder" Content="Placeholder" Click="btnPlaceholder_Click"/>
                <Button x:Name="btnLockPosition" Content="Lock Position" Click="btnLockPosition_Click"/>
                <Button x:Name="btnLockSize" Content="Lock Size" Click="btnLockSize_Click"/>
                <Button x:Name="btnLockAspectRatio" Content="Lock Aspect Ratio" Click="btnLockAspectRatio_Click"/>
                <Button x:Name="btnHorizontalVerticalRatio" Content="HV Aspect Ratio" Click="btnHorizontalVerticalRatio_Click"/>
                <Button x:Name="btnHVCanvas" Content="HV Canvas" Click="btnHVCanvas_Click"/>

                <!-- Add more controls here -->
            </StackPanel>
        </Border>

        <!-- Canvas Area -->
        <!--<canvas:CanvasContainer x:Name="dcvs_container" Grid.Column="1" Grid.Row="0" MouseDown="dcvs_MouseDown" Background="#FF27293A" MouseMove="dcvs_MouseMove" RenderTransformOrigin="0.5,0.5" />-->

        <StatusBar Grid.Column="1" Grid.Row="1">
            <Label>
                <TextBlock>
                    <TextBlock Text="{Binding SelectedItems.Count, ElementName=dcvs, Mode=OneWay}" />
                <TextBlock Text=" / " />
                <TextBlock Text="{Binding Items.Count, ElementName=dcvs, Mode=OneWay}" />
                <TextBlock Text=" selected." />
                </TextBlock>
            </Label>
            <Label>
                <TextBlock>
                    <TextBlock x:Name="RenderedChildrenCounter" Text="-" />
                    <TextBlock Text=" rendered." />
                </TextBlock>
            </Label>
            <Label x:Name="MousePositionLabel" />
            <Label>
                <TextBlock>
                    <TextBlock Text=" Focus:" />
                    <TextBlock x:Name="FocusLabel" Text="-" />
                </TextBlock>
            </Label>
            <!--add the label and slide docked to the right-->
            
            <Label d:LayoutOverrides="Width" Content="{Binding Zoom, ElementName=dcvs}" ContentStringFormat="{}{0}%"/>
            <Slider Value="{Binding Zoom, ElementName=dcvs}" Minimum="1" Maximum="1000" Width="100"/>
        </StatusBar>
    </Grid>
</Window>