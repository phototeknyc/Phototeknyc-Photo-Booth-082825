<UserControl x:Class="Photobooth.Controls.PrintSettingsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    
    <UserControl.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1F1F1F"/>
        <SolidColorBrush x:Key="SurfacePanelBrush" Color="#262626"/>
        <SolidColorBrush x:Key="SurfaceBorderBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5CBF60"/>
        <SolidColorBrush x:Key="SurfaceButtonBrush" Color="#404040"/>
        <SolidColorBrush x:Key="SurfaceButtonHoverBrush" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="SurfaceButtonPressedBrush" Color="#505050"/>
        
        <!-- Modern Slider Style -->
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground" 
                                    Background="#1A1A1A" 
                                    Height="6" 
                                    CornerRadius="3"
                                    VerticalAlignment="Center"/>
                            <Canvas>
                                <Border x:Name="PART_SelectionRange" 
                                        Background="#4CAF50" 
                                        Height="6"
                                        CornerRadius="3"
                                        Canvas.Top="12"/>
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" 
                                                  Background="#4CAF50" 
                                                  Height="6"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Height="{TemplateBinding Height}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" 
                                                  Background="Transparent" 
                                                  Height="6"
                                                  BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Height="{TemplateBinding Height}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="20" Height="20" 
                                                         Fill="#4CAF50" 
                                                         Stroke="White" 
                                                         StrokeThickness="2">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Main Overlay Grid -->
    <Grid x:Name="OverlayGrid" Background="#E6000000">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="OverlayGrid"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <!-- Settings Panel -->
        <Border x:Name="SettingsPanel"
                Background="{StaticResource BackgroundBrush}"
                CornerRadius="8"
                MaxWidth="500"
                MinWidth="450"
                MaxHeight="650"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="20">
            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#1F1F1F" CornerRadius="8,8,0,0">
                    <Grid Margin="24,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#4CAF50" CornerRadius="10" Width="40" Height="40" Margin="0,0,16,0">
                            <TextBlock Text="🖨️" FontSize="22" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="PRINT SETTINGS" FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Print Limits and Copy Controls" FontSize="13" Foreground="#999" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" x:Name="CloseButton" 
                                Content="✕" FontSize="20" FontWeight="Light"
                                Width="40" Height="40"
                                Background="Transparent" Foreground="#999"
                                BorderThickness="0" 
                                Click="CloseButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#3A3A3A" TargetName="border"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Settings Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="24,24,24,24">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="#1A1A1A"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Border Background="#1A1A1A" CornerRadius="4"/>
                                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#4A4A4A" CornerRadius="4">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#5A5A5A"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="0,10,20,0">
                        
                        <!-- Enable Printing -->
                        <StackPanel Margin="0,0,0,25">
                            <CheckBox x:Name="EnablePrintingCheckBox" 
                                      Content="Enable Printing" 
                                      FontSize="16" FontWeight="SemiBold" Foreground="White"
                                      IsChecked="True" 
                                      Checked="EnablePrintingCheckBox_Changed"
                                      Unchecked="EnablePrintingCheckBox_Changed"/>
                            <TextBlock Text="Master switch to enable/disable all printing functionality" 
                                       FontSize="12" Foreground="#666" Margin="22,6,0,0"/>
                        </StackPanel>
                        
                        <!-- Default Print Copies -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Default Print Copies" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="DefaultCopiesSlider" 
                                        Grid.Column="0"
                                        Minimum="1" Maximum="10" Value="1"
                                        TickFrequency="1" IsSnapToTickEnabled="True"
                                        Style="{StaticResource ModernSliderStyle}"
                                        ValueChanged="DefaultCopiesSlider_ValueChanged"/>
                                <TextBlock x:Name="DefaultCopiesValueText" 
                                           Grid.Column="1"
                                           Text="1 copy" 
                                           FontSize="14" Foreground="#4CAF50" 
                                           Width="80" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </Grid>
                            <TextBlock Text="Number of copies selected by default" 
                                       FontSize="12" Foreground="#666" Margin="0,6,0,0"/>
                        </StackPanel>
                        
                        <!-- Max Copies in Selection -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Maximum Copies Per Print" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="MaxCopiesSlider" 
                                        Grid.Column="0"
                                        Minimum="1" Maximum="20" Value="5"
                                        TickFrequency="1" IsSnapToTickEnabled="True"
                                        Style="{StaticResource ModernSliderStyle}"
                                        ValueChanged="MaxCopiesSlider_ValueChanged"/>
                                <TextBlock x:Name="MaxCopiesValueText" 
                                           Grid.Column="1"
                                           Text="5 copies" 
                                           FontSize="14" Foreground="#4CAF50" 
                                           Width="80" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </Grid>
                            <TextBlock Text="Maximum copies user can select at once" 
                                       FontSize="12" Foreground="#666" Margin="0,6,0,0"/>
                        </StackPanel>
                        
                        <!-- Max Prints Per Session -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Maximum Prints Per Session" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="MaxSessionPrintsSlider" 
                                        Grid.Column="0"
                                        Minimum="0" Maximum="50" Value="10"
                                        TickFrequency="1" IsSnapToTickEnabled="True"
                                        Style="{StaticResource ModernSliderStyle}"
                                        ValueChanged="MaxSessionPrintsSlider_ValueChanged"/>
                                <TextBlock x:Name="MaxSessionPrintsValueText" 
                                           Grid.Column="1"
                                           Text="10 prints" 
                                           FontSize="14" Foreground="#4CAF50" 
                                           Width="80" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </Grid>
                            <TextBlock Text="Limit prints per user session (0 = unlimited)" 
                                       FontSize="12" Foreground="#666" Margin="0,6,0,0"/>
                        </StackPanel>
                        
                        <!-- Max Prints Per Event -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Maximum Prints Per Event" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="MaxEventPrintsSlider" 
                                        Grid.Column="0"
                                        Minimum="0" Maximum="1000" Value="0"
                                        TickFrequency="50" IsSnapToTickEnabled="True"
                                        Style="{StaticResource ModernSliderStyle}"
                                        ValueChanged="MaxEventPrintsSlider_ValueChanged"/>
                                <TextBlock x:Name="MaxEventPrintsValueText" 
                                           Grid.Column="1"
                                           Text="Unlimited" 
                                           FontSize="14" Foreground="#4CAF50" 
                                           Width="80" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="12,0,0,0"/>
                            </Grid>
                            <TextBlock Text="Total print limit for entire event (0 = unlimited)" 
                                       FontSize="12" Foreground="#666" Margin="0,6,0,0"/>
                        </StackPanel>
                        
                        <!-- Print Options -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Print Options" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <CheckBox x:Name="ShowPrintButtonCheckBox" 
                                      Content="Show Print Button" 
                                      FontSize="13" Foreground="#B0B0B0"
                                      IsChecked="True" Margin="0,0,0,8"
                                      Checked="ShowPrintButtonCheckBox_Changed"
                                      Unchecked="ShowPrintButtonCheckBox_Changed"/>
                            <CheckBox x:Name="ShowPrintCopiesModalCheckBox" 
                                      Content="Show Copy Selection Dialog" 
                                      FontSize="13" Foreground="#B0B0B0"
                                      IsChecked="True" Margin="0,0,0,8"
                                      Checked="ShowPrintCopiesModalCheckBox_Changed"
                                      Unchecked="ShowPrintCopiesModalCheckBox_Changed"/>
                            <CheckBox x:Name="PrintOnlyOriginalsCheckBox" 
                                      Content="Print Only Original Photos (No Duplicates)" 
                                      FontSize="13" Foreground="#B0B0B0"
                                      IsChecked="False" 
                                      Checked="PrintOnlyOriginalsCheckBox_Changed"
                                      Unchecked="PrintOnlyOriginalsCheckBox_Changed"/>
                        </StackPanel>
                        
                        <!-- Quick Presets -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Quick Presets" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,0,12"/>
                            <WrapPanel>
                                <Button Content="Single Print" 
                                        Width="110" Height="36" Margin="0,0,8,8"
                                        Background="#2196F3" Foreground="White"
                                        BorderThickness="0" FontSize="13"
                                        Click="SinglePrintPresetButton_Click" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#42A5F5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Standard" 
                                        Width="110" Height="36" Margin="0,0,8,8"
                                        Background="#4CAF50" Foreground="White"
                                        BorderThickness="0" FontSize="13"
                                        Click="StandardPresetButton_Click" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#5CBF60"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Unlimited" 
                                        Width="110" Height="36" Margin="0,0,8,8"
                                        Background="#FF9800" Foreground="White"
                                        BorderThickness="0" FontSize="13"
                                        Click="UnlimitedPresetButton_Click" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFB74D"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Footer Actions -->
                <Border Grid.Row="2" Background="{StaticResource SurfacePanelBrush}" 
                        CornerRadius="0,0,8,8" Padding="20,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Reset to Defaults -->
                        <Button Grid.Column="0" x:Name="ResetButton" 
                                Content="Reset to Defaults" 
                                FontSize="14" Padding="12,8" Margin="0,0,8,0"
                                Background="{StaticResource SurfaceButtonHoverBrush}" 
                                Foreground="White" BorderThickness="0"
                                HorizontalAlignment="Left"
                                Click="ResetButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SurfaceButtonPressedBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- Auto-Save Status -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" 
                                  Fill="#4CAF50" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0">
                                <Path.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                 From="0.4" To="1" Duration="0:0:1.5"
                                                                 AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Path.Triggers>
                            </Path>
                            <TextBlock Text="Auto-Save Enabled" FontSize="13" Foreground="#B0B0B0" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Apply and Close Button -->
                        <Button Grid.Column="2" x:Name="ApplyButton" 
                                Content="APPLY" 
                                FontSize="16" FontWeight="SemiBold"
                                Width="120" Height="50"
                                Background="#4CAF50" 
                                Foreground="White" BorderThickness="0"
                                Click="ApplyButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#5CBF60"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>