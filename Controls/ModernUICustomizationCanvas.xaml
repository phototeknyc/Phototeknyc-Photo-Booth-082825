<UserControl x:Class="Photobooth.Controls.ModernUICustomizationCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.Resources>
        <!-- Modern color scheme -->
        <Color x:Key="PrimaryColor">#6C63FF</Color>
        <Color x:Key="SecondaryColor">#FF6B6B</Color>
        <Color x:Key="AccentColor">#4ECDC4</Color>
        <Color x:Key="DarkBg">#1A1A2E</Color>
        <Color x:Key="MediumBg">#16213E</Color>
        <Color x:Key="LightBg">#0F3460</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DarkBgBrush" Color="{StaticResource DarkBg}"/>
        <SolidColorBrush x:Key="MediumBgBrush" Color="{StaticResource MediumBg}"/>
        
        <!-- Modern button style with animations -->
        <Style x:Key="ModernToolButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="{StaticResource MediumBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.1" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="Background.Color"
                                                          To="{StaticResource PrimaryColor}" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern toggle button style -->
        <Style x:Key="ModernToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource MediumBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource PrimaryColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Floating panel style -->
        <Style x:Key="FloatingPanel" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2A2A3E" Offset="0"/>
                        <GradientStop Color="#16213E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource DarkBgBrush}">
        <!-- Main canvas area with grid overlay -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top toolbar -->
            <Border Grid.Row="0" Style="{StaticResource FloatingPanel}" 
                    Margin="20,20,20,0" Height="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Device selector -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Device:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="DeviceSelector" Width="200" Height="35">
                            <ComboBoxItem Content="iPad (1024×768)" IsSelected="True"/>
                            <ComboBoxItem Content="Desktop (1920×1080)"/>
                            <ComboBoxItem Content="Portrait (768×1024)"/>
                            <ComboBoxItem Content="Custom..."/>
                        </ComboBox>
                        
                        <!-- Orientation toggle with animation -->
                        <Button x:Name="OrientationToggle" Style="{StaticResource ModernToolButton}"
                                Margin="20,0,0,0" ToolTip="Toggle Orientation">
                            <Button.Content>
                                <Path Data="M12,7 L12,17 M7,12 L17,12 M14,9 L17,12 L14,15 M10,9 L7,12 L10,15" 
                                      Stroke="White" StrokeThickness="2"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                    <!-- Center title -->
                    <TextBlock Grid.Column="1" Text="UI Layout Designer" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="24" FontWeight="Light" Foreground="White"/>

                    <!-- Right actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="UndoBtn" Style="{StaticResource ModernToolButton}" ToolTip="Undo (Ctrl+Z)">
                            <Path Data="M3,12 A9,9 0 1,1 12,3" Stroke="White" StrokeThickness="2"/>
                        </Button>
                        <Button x:Name="RedoBtn" Style="{StaticResource ModernToolButton}" ToolTip="Redo (Ctrl+Y)">
                            <Path Data="M21,12 A9,9 0 1,0 12,3" Stroke="White" StrokeThickness="2"/>
                        </Button>
                        <Separator Width="1" Height="30" Background="#444" Margin="10,0"/>
                        <Button x:Name="PreviewBtn" Style="{StaticResource ModernToolButton}" 
                                Background="{StaticResource AccentBrush}" ToolTip="Preview">
                            <Path Data="M12,9 L12,9 A3,3 0 0,1 15,12 A3,3 0 0,1 12,15 A3,3 0 0,1 9,12 A3,3 0 0,1 12,9 M12,4.5 C7,4.5 2.73,7.61 1,12 C2.73,16.39 7,19.5 12,19.5 C17,19.5 21.27,16.39 23,12 C21.27,7.61 17,4.5 12,4.5" 
                                  Fill="White"/>
                        </Button>
                        <Button x:Name="SaveBtn" Style="{StaticResource ModernToolButton}" 
                                Background="{StaticResource PrimaryBrush}" ToolTip="Save Layout">
                            <Path Data="M5,3 L19,3 L19,21 L5,21 Z M9,3 L9,8 L15,8 L15,3 M12,11 L12,18" 
                                  Stroke="White" StrokeThickness="2" Fill="Transparent"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main canvas area -->
            <Grid Grid.Row="1" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- Left toolbox -->
                <Border Grid.Column="0" Style="{StaticResource FloatingPanel}" 
                        VerticalAlignment="Center" Margin="5,0,5,0" HorizontalAlignment="Stretch">
                    <StackPanel Margin="5">
                        <TextBlock Text="TOOLS" Foreground="#888" FontSize="10" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <!-- Selection tool -->
                        <ToggleButton x:Name="SelectTool" Style="{StaticResource ModernToggleButton}" 
                                      IsChecked="True" ToolTip="Select (V)">
                            <Path Data="M0,0 L0,12 L3,9 L5,11 L7,9 L5,6 L9,4 Z" 
                                  Fill="White" Width="16" Height="16"/>
                        </ToggleButton>
                        
                        <!-- Add button tool -->
                        <Button x:Name="AddButtonTool" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Add Button" AllowDrop="True">
                            <Border Width="22" Height="12" BorderBrush="White" BorderThickness="1.5" CornerRadius="2"/>
                        </Button>
                        
                        <!-- Add text tool -->
                        <Button x:Name="AddTextTool" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Add Text">
                            <TextBlock Text="T" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </Button>
                        
                        <!-- Add image tool -->
                        <Button x:Name="AddImageTool" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Add Image">
                            <Grid Width="18" Height="18">
                                <Rectangle Stroke="White" StrokeThickness="1.5" Fill="Transparent"/>
                                <Ellipse Width="3" Height="3" Fill="White" Margin="4,4,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Path Data="M0,10 L4,6 L7,9 L10,4 L14,8" Stroke="White" StrokeThickness="1.5" Margin="2,0,2,3"/>
                            </Grid>
                        </Button>
                        
                        <!-- Add shape tool -->
                        <Button x:Name="AddShapeTool" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Add Shape">
                            <Rectangle Width="16" Height="16" Stroke="White" StrokeThickness="1.5" Fill="Transparent"/>
                        </Button>
                        
                        <Separator Height="1" Background="#444" Margin="5,10"/>
                        
                        <!-- Alignment tools -->
                        <Button x:Name="AlignLeftBtn" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Align Left">
                            <Grid Width="16" Height="16">
                                <Line X1="0" Y1="0" X2="0" Y2="16" Stroke="White" StrokeThickness="2"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="3,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Rectangle Width="7" Height="3" Fill="White" Margin="3,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="3,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            </Grid>
                        </Button>
                        
                        <Button x:Name="AlignCenterBtn" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Align Center">
                            <Grid Width="16" Height="16">
                                <Line X1="8" Y1="0" X2="8" Y2="16" Stroke="White" StrokeThickness="2"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="3,2,3,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Rectangle Width="7" Height="3" Fill="White" Margin="0,7,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="3,12,3,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            </Grid>
                        </Button>
                        
                        <Button x:Name="AlignRightBtn" Style="{StaticResource ModernToolButton}" 
                                ToolTip="Align Right">
                            <Grid Width="16" Height="16">
                                <Line X1="16" Y1="0" X2="16" Y2="16" Stroke="White" StrokeThickness="2"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="0,2,3,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                <Rectangle Width="7" Height="3" Fill="White" Margin="0,7,3,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                <Rectangle Width="10" Height="3" Fill="White" Margin="0,12,3,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Design canvas -->
                <Border Grid.Column="1" Style="{StaticResource FloatingPanel}">
                    <Grid>
                        <!-- Grid pattern background -->
                        <Canvas x:Name="GridCanvas" Opacity="0.1">
                            <Canvas.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <GeometryDrawing>
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,50,50"/>
                                            </GeometryDrawing.Geometry>
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="White" Thickness="0.5"/>
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Canvas.Background>
                        </Canvas>

                        <!-- Device frame -->
                        <Border x:Name="DeviceFrame" 
                                Width="1024" Height="768"
                                Background="#0A0A0A"
                                CornerRadius="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.6"/>
                            </Border.Effect>
                            
                            <Grid>
                                <!-- Screen area -->
                                <Border Margin="20" CornerRadius="20" Background="#1E1E1E"
                                        ClipToBounds="True">
                                    <!-- Actual design canvas -->
                                    <Canvas x:Name="DesignCanvas" 
                                            Background="Transparent"
                                            AllowDrop="True">
                                        <!-- Elements will be added here dynamically -->
                                    </Canvas>
                                </Border>
                                
                                <!-- Device bezel elements -->
                                <Ellipse Width="10" Height="10" Fill="#333" 
                                         VerticalAlignment="Top" HorizontalAlignment="Center"
                                         Margin="0,5,0,0"/> <!-- Camera -->
                                <Rectangle Width="60" Height="5" Fill="#333" RadiusX="2" RadiusY="2"
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/> <!-- Home indicator -->
                            </Grid>
                        </Border>

                        <!-- Ruler guides -->
                        <Canvas x:Name="RulerCanvas" IsHitTestVisible="False">
                            <!-- Horizontal and vertical rulers drawn here -->
                        </Canvas>

                        <!-- Smart guides (show during drag) -->
                        <Canvas x:Name="SmartGuidesCanvas" IsHitTestVisible="False">
                            <Line x:Name="HorizontalGuide" Stroke="{StaticResource AccentBrush}" 
                                  StrokeThickness="1" StrokeDashArray="5,5" Visibility="Collapsed"/>
                            <Line x:Name="VerticalGuide" Stroke="{StaticResource AccentBrush}" 
                                  StrokeThickness="1" StrokeDashArray="5,5" Visibility="Collapsed"/>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Right properties panel -->
                <Border Grid.Column="2" Style="{StaticResource FloatingPanel}" 
                        Margin="10,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Element info -->
                            <TextBlock Text="PROPERTIES" Foreground="#888" FontSize="10" Margin="0,0,0,15"/>
                            
                            <Border x:Name="ElementInfoPanel" Visibility="Collapsed"
                                    Background="#1A1A2E" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Button" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="start-button" FontSize="12" Foreground="#888" Margin="0,2,0,10"/>
                                    
                                    <!-- Position -->
                                    <TextBlock Text="Position" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="XPosition" Grid.Column="0" Text="512" 
                                                 Background="#0F0F23" Foreground="White" BorderBrush="#444"/>
                                        <TextBox x:Name="YPosition" Grid.Column="2" Text="600" 
                                                 Background="#0F0F23" Foreground="White" BorderBrush="#444"/>
                                    </Grid>
                                    
                                    <!-- Size -->
                                    <TextBlock Text="Size" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="Width" Grid.Column="0" Text="200" 
                                                 Background="#0F0F23" Foreground="White" BorderBrush="#444"/>
                                        <TextBox x:Name="Height" Grid.Column="2" Text="80" 
                                                 Background="#0F0F23" Foreground="White" BorderBrush="#444"/>
                                    </Grid>
                                    
                                    <!-- Anchor -->
                                    <TextBlock Text="Anchor Point" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <ComboBox x:Name="AnchorSelector" Background="#0F0F23" Foreground="White">
                                        <ComboBoxItem Content="Top Left"/>
                                        <ComboBoxItem Content="Top Center"/>
                                        <ComboBoxItem Content="Top Right"/>
                                        <ComboBoxItem Content="Center" IsSelected="True"/>
                                        <ComboBoxItem Content="Bottom Left"/>
                                        <ComboBoxItem Content="Bottom Center"/>
                                        <ComboBoxItem Content="Bottom Right"/>
                                    </ComboBox>
                                    
                                    <!-- Responsive sizing -->
                                    <TextBlock Text="Size Mode" Foreground="#AAA" Margin="0,10,0,5"/>
                                    <ComboBox x:Name="SizeModeSelector" Background="#0F0F23" Foreground="White">
                                        <ComboBoxItem Content="Fixed Pixels"/>
                                        <ComboBoxItem Content="Relative %" IsSelected="True"/>
                                        <ComboBoxItem Content="Stretch"/>
                                        <ComboBoxItem Content="Aspect Fit"/>
                                    </ComboBox>
                                    
                                    <!-- Appearance -->
                                    <TextBlock Text="Appearance" Foreground="#AAA" Margin="0,15,0,5"/>
                                    <StackPanel>
                                        <CheckBox Content="Visible" IsChecked="True" Foreground="#AAA"/>
                                        <CheckBox Content="Enabled" IsChecked="True" Foreground="#AAA"/>
                                        
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Opacity" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <Slider Grid.Column="1" Value="100" Minimum="0" Maximum="100"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <!-- Layers panel -->
                            <TextBlock Text="LAYERS" Foreground="#888" FontSize="10" Margin="0,15,0,10"/>
                            <ListBox x:Name="LayersList" Background="#1A1A2E" BorderThickness="0"
                                     Height="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0F0F23" CornerRadius="5" Padding="10,8" Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Grid.Column="0" IsChecked="True" Margin="0,0,10,0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="White"/>
                                                <TextBlock Grid.Column="2" Text="👁" Opacity="0.5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Quick actions -->
                            <StackPanel Margin="0,20,0,0">
                                <Button Content="Duplicate" Background="{StaticResource MediumBgBrush}" 
                                        Foreground="White" Padding="10,8" Margin="0,2"/>
                                <Button Content="Delete" Background="#FF4444" 
                                        Foreground="White" Padding="10,8" Margin="0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Bottom status bar -->
            <Border Grid.Row="2" Style="{StaticResource FloatingPanel}" 
                    Margin="20,0,20,20" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Zoom controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <Button Content="-" Width="25" Height="25" Margin="0,0,5,0" FontSize="12"/>
                        <TextBlock Text="100%" VerticalAlignment="Center" Foreground="White" Margin="5,0" FontSize="12"/>
                        <Button Content="+" Width="25" Height="25" Margin="5,0,0,0" FontSize="12"/>
                        <Button Content="Fit" Width="35" Height="25" Margin="10,0,0,0" FontSize="11"/>
                    </StackPanel>
                    
                    <!-- Center info -->
                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#888" FontSize="12">
                        <Run Text="Canvas:"/>
                        <Run Text="1024×768" FontWeight="Bold" Foreground="White"/>
                        <Run Text="  |  "/>
                        <Run Text="Elements:"/>
                        <Run Text="7" FontWeight="Bold" Foreground="White"/>
                        <Run Text="  |  "/>
                        <Run Text="Modified"/>
                    </TextBlock>
                    
                    <!-- Grid snap toggle -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox Content="Snap to Grid" IsChecked="True" Foreground="#AAA" Margin="0,0,10,0"/>
                        <CheckBox Content="Smart Guides" IsChecked="True" Foreground="#AAA"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Floating context menu (hidden by default) -->
        <Border x:Name="ContextMenu" Visibility="Collapsed" 
                Style="{StaticResource FloatingPanel}"
                Width="200" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <Button Content="✂️ Cut" Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
                <Button Content="📋 Copy" Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
                <Button Content="📄 Paste" Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
                <Separator Background="#444" Margin="5,2"/>
                <Button Content="🔒 Lock Position" Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
                <Button Content="📐 Reset Transform" Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
                <Separator Background="#444" Margin="5,2"/>
                <Button Content="🗑️ Delete" Background="Transparent" Foreground="#FF4444" 
                        HorizontalContentAlignment="Left" Padding="10,5"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>