<UserControl x:Class="Photobooth.Controls.GuestBackgroundPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Dark theme matching the app -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>

        <!-- Large touch-friendly style -->
        <Style x:Key="BackgroundOptionStyle" TargetType="Border">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Background Option Template -->
        <DataTemplate x:Key="BackgroundOptionTemplate">
            <Border Style="{StaticResource BackgroundOptionStyle}"
                    MouseLeftButtonDown="BackgroundOption_Click"
                    Tag="{Binding Id}">
                <Grid>
                    <!-- Shadow Effect -->
                    <Border Background="Black"
                            Opacity="0.1"
                            CornerRadius="15"
                            Margin="3">
                        <Border.Effect>
                            <BlurEffect Radius="5"/>
                        </Border.Effect>
                    </Border>

                    <!-- Main Content -->
                    <Border CornerRadius="12"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <Grid>
                            <!-- Background Preview -->
                            <Border CornerRadius="12"
                                    ClipToBounds="True">
                                <Image Source="{Binding ThumbnailPath}"
                                       Stretch="UniformToFill"
                                       Visibility="{Binding HasThumbnail, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Border>

                            <!-- Selection Indicator -->
                            <Border x:Name="SelectionIndicator"
                                    Background="#CC007ACC"
                                    CornerRadius="12"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Ellipse Width="80" Height="80"
                                             Fill="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="âœ“"
                                               FontSize="50"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main Container -->
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBackgroundBrush}"
                Padding="40,30"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="Choose Your Photo Background"
                           FontSize="36"
                           FontWeight="Light"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                <TextBlock Text="âœ•"
                                           FontSize="24"
                                           Foreground="{StaticResource TextBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#44FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Background Options Grid -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <ItemsControl x:Name="BackgroundsGrid"
                          ItemTemplate="{StaticResource BackgroundOptionTemplate}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Instruction Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource CardBackgroundBrush}"
                Padding="30,20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Instructions -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ‘†"
                               FontSize="32"
                               Margin="0,0,15,0"/>
                    <TextBlock Text="Tap a background to start your photo session"
                               FontSize="22"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <Border Grid.Column="1"
                        x:Name="LoadingIndicator"
                        Visibility="Collapsed"
                        Padding="20,10"
                        Background="{StaticResource AccentBrush}"
                        CornerRadius="25">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Starting..."
                                   FontSize="18"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Start Animation Overlay -->
        <Grid x:Name="StartOverlay"
              Grid.RowSpan="3"
              Background="#CC000000"
              Visibility="Collapsed">
            <Border Background="{StaticResource CardBackgroundBrush}"
                    CornerRadius="20"
                    Padding="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="ðŸ“¸"
                               FontSize="80"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Get Ready!"
                               FontSize="36"
                               FontWeight="Medium"
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Your photo session is starting..."
                               FontSize="20"
                               Foreground="{StaticResource SubTextBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>