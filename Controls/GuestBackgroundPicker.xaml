<UserControl x:Class="Photobooth.Controls.GuestBackgroundPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Simple, clean theme for guests -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>

        <!-- Large touch-friendly style -->
        <Style x:Key="BackgroundOptionStyle" TargetType="Border">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Background Option Template -->
        <DataTemplate x:Key="BackgroundOptionTemplate">
            <Border Style="{StaticResource BackgroundOptionStyle}"
                    MouseLeftButtonDown="BackgroundOption_Click"
                    Tag="{Binding Id}">
                <Grid>
                    <!-- Shadow Effect -->
                    <Border Background="Black"
                            Opacity="0.1"
                            CornerRadius="15"
                            Margin="3">
                        <Border.Effect>
                            <BlurEffect Radius="5"/>
                        </Border.Effect>
                    </Border>

                    <!-- Main Content -->
                    <Border CornerRadius="12"
                            Background="White"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <Grid>
                            <!-- Background Preview or Icon -->
                            <Border CornerRadius="12,12,0,0"
                                    ClipToBounds="True"
                                    Height="150">
                                <Grid>
                                    <!-- Image for backgrounds -->
                                    <Image Source="{Binding ThumbnailPath}"
                                           Stretch="UniformToFill"
                                           Visibility="{Binding HasThumbnail, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Icon for "No Background" -->
                                    <TextBlock Text="❌"
                                               FontSize="60"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#CCCCCC"
                                               Visibility="{Binding IsNoBackground, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>

                            <!-- Name Label -->
                            <Border VerticalAlignment="Bottom"
                                    Background="White"
                                    Height="50"
                                    CornerRadius="0,0,12,12">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Selection Indicator -->
                            <Border x:Name="SelectionIndicator"
                                    Background="#CC4CAF50"
                                    CornerRadius="12"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Ellipse Width="80" Height="80"
                                             Fill="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="✓"
                                               FontSize="50"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main Container -->
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                Padding="40,30"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <TextBlock Text="Choose Your Photo Background"
                       FontSize="36"
                       FontWeight="Light"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Background Options Grid -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <ItemsControl x:Name="BackgroundsGrid"
                          ItemTemplate="{StaticResource BackgroundOptionTemplate}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Instruction Bar -->
        <Border Grid.Row="2"
                Background="White"
                Padding="30,20"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Instructions -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="👆"
                               FontSize="32"
                               Margin="0,0,15,0"/>
                    <TextBlock Text="Tap a background to start your photo session"
                               FontSize="22"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <Border Grid.Column="1"
                        x:Name="LoadingIndicator"
                        Visibility="Collapsed"
                        Padding="20,10"
                        Background="{StaticResource AccentBrush}"
                        CornerRadius="25">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Starting..."
                                   FontSize="18"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Start Animation Overlay -->
        <Grid x:Name="StartOverlay"
              Grid.RowSpan="3"
              Background="#CC000000"
              Visibility="Collapsed">
            <Border Background="White"
                    CornerRadius="20"
                    Padding="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="📸"
                               FontSize="80"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Get Ready!"
                               FontSize="36"
                               FontWeight="Medium"
                               Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Your photo session is starting..."
                               FontSize="20"
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>