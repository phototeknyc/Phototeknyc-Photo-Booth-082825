<UserControl x:Class="Photobooth.Controls.EventTemplatesOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Photobooth.Controls"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid x:Name="MainOverlay">
        <!-- Full screen background with opacity -->
        <Rectangle Fill="#FF0F0F0F" Opacity="0.95"/>

        <!-- Main Content -->
        <Grid Margin="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2E2E2E" CornerRadius="10,10,0,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="28" Foreground="#4CAF50" Margin="0,0,15,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TitleText" Text="Event Templates"
                                   FontSize="24" FontWeight="Light" Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="EventNameText" Text=""
                                   FontSize="20" FontWeight="Light" Foreground="#B0B0B0"
                                   Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close button -->
                    <Button Grid.Column="1" x:Name="CloseButton"
                            Click="CloseButton_Click"
                            Width="44" Height="44"
                            Background="Transparent" BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="20" Foreground="#E74C3C"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="0,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="400"/>
                        <ColumnDefinition Width="2*" MinWidth="600"/>
                    </Grid.ColumnDefinitions>

                    <!-- Template List -->
                    <Border Grid.Column="0" Background="#252525" Margin="10" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- List Header -->
                            <Border Grid.Row="0" Background="#2E2E2E" Padding="15,10">
                                <TextBlock Text="Templates Associated with Event"
                                           FontSize="16" Foreground="#4CAF50"/>
                            </Border>

                            <!-- Template Items -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="TemplatesList" Margin="10">
                                    <!-- Template items will be added here programmatically -->
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Add Template Button -->
                            <Border Grid.Row="2" Background="#2E2E2E" Padding="10">
                                <Button x:Name="AddTemplateButton" Click="AddTemplate_Click"
                                        Height="44" Background="#4CAF50"
                                        BorderThickness="0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock Text="Add Existing Template"
                                                   FontSize="14" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Preview Area -->
                    <Border Grid.Column="1" Background="#252525" Margin="10" CornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Preview Header -->
                            <Border Grid.Row="0" Background="#2E2E2E" Padding="15,10">
                                <TextBlock x:Name="PreviewTitle" Text="Template Preview"
                                           FontSize="16" Foreground="#4CAF50"/>
                            </Border>

                            <!-- Preview Content -->
                            <Grid Grid.Row="1" x:Name="PreviewContainer">
                                <!-- Default message when no template selected -->
                                <TextBlock x:Name="NoPreviewText"
                                           Text="Select a template to preview"
                                           FontSize="18" Foreground="#808080"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <!-- Unified preview container -->
                                <Border x:Name="PreviewBorder" Visibility="Collapsed"
                                        Margin="20" Background="#1A1A1A" ClipToBounds="True"
                                        BorderBrush="#4CAF50" BorderThickness="1">
                                    <Grid>
                                        <!-- Image-based preview (best for thumbnails) -->
                                        <Image x:Name="PreviewImage"
                                               Visibility="Collapsed"
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <!-- Canvas-based preview (fallback/manual render) -->
                                        <Viewbox x:Name="PreviewViewbox" Stretch="Uniform"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 Visibility="Collapsed">
                                            <Canvas x:Name="PreviewCanvas" Width="1800" Height="1200"/>
                                        </Viewbox>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Template Info -->
                            <Border Grid.Row="2" x:Name="TemplateInfoPanel"
                                    Background="#2E2E2E" Padding="15" Visibility="Collapsed">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" x:Name="TemplateNameInfo"
                                               FontSize="16" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBlock Grid.Row="1" x:Name="TemplateDetailsInfo"
                                               FontSize="12" Foreground="#B0B0B0" Margin="0,0,0,10"/>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button x:Name="LoadTemplateButton" Click="LoadTemplate_Click"
                                                Width="120" Height="36" Margin="0,0,10,0"
                                                Background="#4CAF50" BorderThickness="0"
                                                Cursor="Hand" Visibility="Collapsed">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <TextBlock Text="Load Template" FontSize="13" Foreground="White"/>
                                        </Button>

                                        <Button x:Name="SetDefaultButton" Click="SetDefault_Click"
                                                Width="120" Height="36" Margin="0,0,10,0"
                                                Background="#2196F3" BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <TextBlock Text="Set as Default" FontSize="13" Foreground="White"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
