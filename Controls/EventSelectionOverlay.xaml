<UserControl x:Class="Photobooth.Controls.EventSelectionOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"
                                            xmlns:Converters="clr-namespace:Photobooth.Converters"/>

        <!-- Modern Dark Theme Styles -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="Search events..."
                                           Foreground="#808080"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="EventItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SelectButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5CBF60"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A9F40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Main Overlay -->
    <Grid x:Name="MainOverlay" 
          Background="#CC000000" 
          Visibility="Collapsed">
        
        <!-- Animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <!-- Content Container - Full Width and Taller -->
        <Border Background="#2D2D30" 
                CornerRadius="20" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="40,20,40,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="10" Opacity="0.7"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button and Management Buttons -->
                <Grid Grid.Row="0" Margin="30,30,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Event Management Buttons -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">

                        <!-- New Event Button (always visible) -->
                        <Button x:Name="NewEventButton"
                                Content="➕ New Event"
                                Margin="0,0,15,0"
                                Padding="15,10"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                MinWidth="120"
                                Height="44"
                                Click="NewEventButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5CBF60"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#3A9F40"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Separator -->
                        <Border Width="1"
                                Height="30"
                                Background="#606060"
                                Margin="0,0,15,0"
                                VerticalAlignment="Center"/>

                        <!-- Event-specific Management Buttons (visible when event selected) -->
                        <StackPanel x:Name="EventManagementButtons"
                                    Orientation="Horizontal"
                                    Visibility="Collapsed">

                        <Button x:Name="DuplicateEventButton"
                                Content="📋 Duplicate"
                                Margin="0,0,10,0"
                                Padding="15,10"
                                Background="#5CAF50"
                                Foreground="White"
                                FontSize="16"
                                MinWidth="100"
                                Height="44"
                                Click="DuplicateEvent_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6CBF60"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="RenameEventButton"
                                Content="✏️ Rename"
                                Margin="0,0,10,0"
                                Padding="15,10"
                                Background="#2196F3"
                                Foreground="White"
                                FontSize="16"
                                MinWidth="100"
                                Height="44"
                                Click="RenameEvent_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#42A5F5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="DeleteEventButton"
                                Content="🗑️ Delete"
                                Padding="15,10"
                                Background="#F44336"
                                Foreground="White"
                                FontSize="16"
                                MinWidth="100"
                                Height="44"
                                Click="DeleteEvent_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EF5350"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        </StackPanel>

                        <!-- Select Mode Button -->
                        <Button x:Name="SelectModeButton"
                                Content="☐ Select Mode"
                                Margin="15,0,0,0"
                                Padding="15,10"
                                Background="#FF6B4A"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                MinWidth="130"
                                Height="44"
                                Click="SelectModeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF7B5A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#E55B3A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Select Event"
                               Grid.Column="1"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            Content="✕"
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>

                <!-- Select Mode Panel -->
                <StackPanel x:Name="SelectModePanel"
                            Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="30,0,30,15"
                            Visibility="Collapsed">

                    <Button x:Name="SelectAllButton"
                            Content="☑ Select All"
                            Margin="0,0,10,0"
                            Padding="15,10"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="16"
                            MinWidth="120"
                            Height="44"
                            Click="SelectAllButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5CBF60"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="DeselectAllButton"
                            Content="☐ Deselect All"
                            Margin="0,0,10,0"
                            Padding="15,10"
                            Background="#607D8B"
                            Foreground="White"
                            FontSize="16"
                            MinWidth="120"
                            Height="44"
                            Click="DeselectAllButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#708D9B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="DeleteSelectedButton"
                            Content="🗑️ Delete Selected"
                            Padding="15,10"
                            Background="#F44336"
                            Foreground="White"
                            FontSize="16"
                            MinWidth="140"
                            Height="44"
                            IsEnabled="False"
                            Click="DeleteSelectedButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Opacity="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled, Converter={StaticResource BoolToOpacityConverter}}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsEnabled" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background" Value="#EF5350"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock x:Name="SelectionStatusText"
                               Text="0 selected"
                               Margin="20,0,0,0"
                               Foreground="#9E9E9E"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Bar -->
                <Grid Grid.Row="2" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchTextBox"
                             Grid.Column="0"
                             Style="{StaticResource ModernTextBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <Button x:Name="ClearSearchButton"
                            Grid.Column="1"
                            Content="Clear"
                            Margin="10,0,0,0"
                            Padding="20,8"
                            Background="#606060"
                            Foreground="White"
                            FontSize="14"
                            Click="ClearSearchButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#707070"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
                
                <!-- Main Content Area - Grid Layout -->
                <ScrollViewer Grid.Row="3" 
                              Margin="30,0,30,20"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Border Background="#303030" CornerRadius="6"/>
                                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#606060" CornerRadius="6"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Events Grid -->
                        <ItemsControl x:Name="EventsListBox"
                                      Grid.Row="1"
                                      Background="Transparent"
                                      BorderThickness="0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="180"
                                          Height="240"
                                          Margin="8">
                                        <!-- Card Border -->
                                        <Border x:Name="EventCardBorder"
                                                Background="#1A1A1A"
                                                CornerRadius="8"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="EventItem_MouseDown"
                                                Tag="{Binding}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="#3A3A3A"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="#00A0FF"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                            <Setter Property="BorderThickness" Value="3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <Grid>
                                                <!-- Template Preview fills entire card -->
                                                <Border CornerRadius="8" ClipToBounds="True">
                                                    <Grid>
                                                        <!-- Preview Image - Uniform to show full template -->
                                                        <Image x:Name="EventTemplatePreview"
                                                               Stretch="Uniform"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"/>
                                                        
                                                        <!-- Fallback placeholder -->
                                                        <Grid x:Name="NoPreviewFallback" Background="#2A2A2A">
                                                            <TextBlock Text="📷"
                                                                       FontSize="40"
                                                                       Foreground="#505050"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                
                                                <!-- Minimal label overlay at bottom -->
                                                <Border VerticalAlignment="Bottom"
                                                        Background="#CC000000"
                                                        CornerRadius="0,0,8,8">
                                                    <Grid Margin="8,4">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <!-- Event Name -->
                                                        <TextBlock Grid.Row="0"
                                                                   Text="{Binding EventData.Name}"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   TextTrimming="CharacterEllipsis"/>

                                                        <!-- Date/Time info -->
                                                        <TextBlock Grid.Row="1"
                                                                   FontSize="9"
                                                                   Foreground="#A0A0A0">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:MMM dd} | {1}">
                                                                    <Binding Path="EventData.EventDate" FallbackValue=""/>
                                                                    <Binding Path="EventData.EventType" FallbackValue="Event"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                                
                                                <!-- Selection Checkbox (top-left) -->
                                                <Border Background="#CC000000"
                                                        CornerRadius="4"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Margin="8"
                                                        Padding="2"
                                                        Visibility="{Binding ShowCheckbox, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <CheckBox IsChecked="{Binding IsSelected}"
                                                              Width="20"
                                                              Height="20"
                                                              Background="White"
                                                              BorderBrush="#4CAF50"
                                                              Foreground="#4CAF50">
                                                        <CheckBox.Style>
                                                            <Style TargetType="CheckBox">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="CheckBox">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                                    BorderThickness="2"
                                                                                    CornerRadius="3">
                                                                                <Grid>
                                                                                    <TextBlock Text="✓"
                                                                                               FontSize="14"
                                                                                               FontWeight="Bold"
                                                                                               Foreground="{TemplateBinding Foreground}"
                                                                                               HorizontalAlignment="Center"
                                                                                               VerticalAlignment="Center"
                                                                                               Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                                                </Grid>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </CheckBox.Style>
                                                    </CheckBox>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- No Events Message -->
                        <TextBlock x:Name="NoEventsMessage"
                                   Grid.Row="1"
                                   Text="No events found"
                                   FontSize="18"
                                   Foreground="#808080"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Grid>
                </ScrollViewer>
                
                <!-- Footer with Select Button -->
                <Grid Grid.Row="4" Margin="30,0,30,30">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="CancelButton"
                                Content="Cancel"
                                Margin="0,0,10,0"
                                Padding="30,12"
                                Background="#606060"
                                Foreground="White"
                                FontSize="18"
                                Click="CancelButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#707070"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="SelectEventButton"
                                Content="Select Event"
                                Style="{StaticResource SelectButtonStyle}"
                                IsEnabled="False"
                                Click="SelectEventButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>