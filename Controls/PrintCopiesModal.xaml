<UserControl x:Class="Photobooth.Controls.PrintCopiesModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             Visibility="Collapsed"
             Background="#80000000">
    
    <!-- Semi-transparent overlay -->
    <Grid>
        <!-- Modal Container -->
        <Border Background="#2D2D30" 
                CornerRadius="10" 
                Padding="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                MinWidth="350"
                MinHeight="200"
                BorderBrush="#007ACC" 
                BorderThickness="2">
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Select Number of Copies" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                
                <!-- Copy Count Display -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,30">
                    
                    <!-- Minus Button -->
                    <Button x:Name="MinusButton" 
                            Content="âˆ’" 
                            FontSize="24" 
                            FontWeight="Bold"
                            Width="50" 
                            Height="50" 
                            Background="#555555" 
                            Foreground="White" 
                            BorderBrush="#777777"
                            Margin="0,0,20,0"
                            Click="MinusButton_Click"
                            Style="{DynamicResource RoundButtonStyle}"/>
                    
                    <!-- Count Display -->
                    <TextBlock x:Name="CopyCountText" 
                               Text="1" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               MinWidth="60"
                               TextAlignment="Center"/>
                    
                    <!-- Plus Button -->
                    <Button x:Name="PlusButton" 
                            Content="+" 
                            FontSize="24" 
                            FontWeight="Bold"
                            Width="50" 
                            Height="50" 
                            Background="#555555" 
                            Foreground="White" 
                            BorderBrush="#777777"
                            Margin="20,0,0,0"
                            Click="PlusButton_Click"
                            Style="{DynamicResource RoundButtonStyle}"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">
                    
                    <Button x:Name="PrintButton" 
                            Content="PRINT" 
                            Width="100" 
                            Height="40" 
                            FontSize="14" 
                            FontWeight="Bold"
                            Background="#007ACC" 
                            Foreground="White" 
                            BorderThickness="0"
                            Margin="0,0,20,0"
                            Click="PrintButton_Click"/>
                    
                    <Button x:Name="CancelButton" 
                            Content="CANCEL" 
                            Width="100" 
                            Height="40" 
                            FontSize="14" 
                            FontWeight="Bold"
                            Background="#666666" 
                            Foreground="White" 
                            BorderThickness="0"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>