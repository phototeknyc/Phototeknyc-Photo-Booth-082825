<UserControl x:Class="Photobooth.Controls.GalleryBrowserModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.Controls"
             xmlns:converters="clr-namespace:Photobooth.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Visibility="Collapsed">
    
    <UserControl.Resources>
        <converters:NullImageConverter x:Key="NullImageConverter"/>
        <!-- Session Card Style -->
        <Style x:Key="SessionCardStyle" TargetType="Border">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="340"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="ModalCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E57373"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Modal Overlay -->
    <Grid Background="#E5000000">
        <!-- Main Container -->
        <Border Background="#1E1E1E" 
                CornerRadius="20" 
                Margin="50"
                MaxWidth="1400"
                MaxHeight="900">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.5"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#2A2A2A" CornerRadius="20,20,0,0" Padding="25,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📸 Event Gallery Browser" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="0,0,20,0"/>
                            
                            <TextBlock x:Name="galleryStatsText" 
                                       Text="0 sessions • 0 photos" 
                                       FontSize="18" 
                                       Foreground="#CCCCCC"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Content="✖" 
                                Click="CloseModal_Click"
                                Style="{StaticResource ModalCloseButtonStyle}"/>
                    </Grid>
                </Border>
                
                <!-- Sessions Grid -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="20">
                    <ItemsControl x:Name="sessionsGrid">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SessionCardStyle}"
                                        Tag="{Binding}"
                                        MouseLeftButtonUp="SessionCard_Click">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                    </Border.Effect>
                                    
                                    <Grid>
                                        <!-- Single Thumbnail -->
                                        <Border Margin="10,10,10,90" 
                                                CornerRadius="8" 
                                                ClipToBounds="True">
                                            <Grid>
                                                <Image Source="{Binding ThumbnailPath, Converter={StaticResource NullImageConverter}}" 
                                                       Stretch="UniformToFill"/>
                                                
                                                <!-- Photo count overlay (top right corner) -->
                                                <Border Background="#CC000000"
                                                        CornerRadius="5"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="0,10,10,0"
                                                        Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="📷 " 
                                                                   Foreground="White" 
                                                                   FontSize="14"/>
                                                        <TextBlock Text="{Binding PhotoCount}" 
                                                                   Foreground="White" 
                                                                   FontSize="14"
                                                                   FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- Session Info -->
                                        <Border VerticalAlignment="Bottom"
                                                Background="#CC000000"
                                                CornerRadius="0,0,10,10"
                                                Height="85">
                                            <StackPanel Margin="12,10">
                                                <TextBlock Text="{Binding SessionName}" 
                                                           Foreground="White" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding SessionTime}" 
                                                           Foreground="#CCCCCC" 
                                                           FontSize="14"
                                                           Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,2">
                                                    <TextBlock Text="📷 " 
                                                               Foreground="#4CAF50" 
                                                               FontSize="12"/>
                                                    <TextBlock Text="{Binding PhotoCountDisplay}" 
                                                               Foreground="#4CAF50" 
                                                               FontSize="12"
                                                               FontWeight="Bold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Hover Overlay -->
                                        <Border x:Name="hoverOverlay"
                                                Background="#4C4CAF50"
                                                CornerRadius="10"
                                                Visibility="Collapsed">
                                            <TextBlock Text="Click to View"
                                                       Foreground="White"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Status Bar -->
                <Border Grid.Row="2" 
                        Background="#2A2A2A" 
                        CornerRadius="0,0,20,20" 
                        Padding="25,15">
                    <Grid>
                        <TextBlock x:Name="statusText" 
                                   Text="Select a session to view" 
                                   Foreground="#CCCCCC"
                                   FontSize="14"
                                   HorizontalAlignment="Left"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="refreshButton"
                                    Content="🔄 Refresh"
                                    Click="RefreshGallery_Click"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="20,10"
                                    Margin="0,0,10,0"
                                    FontSize="14"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5CBF60"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>