<UserControl x:Class="Photobooth.Controls.SessionSelectionModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <!-- Modal Background Overlay -->
    <Grid x:Name="ModalOverlay" 
          Background="#AA000000" 
          Visibility="Collapsed"
          MouseDown="ModalOverlay_MouseDown">
        
        <!-- Main Modal Container - Fullscreen -->
        <Border x:Name="ModalContainer"
                Background="#2D2D30"
                BorderBrush="#555555"
                BorderThickness="0"
                CornerRadius="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Border.RenderTransform>
            
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>  <!-- Header -->
                    <RowDefinition Height="70"/>  <!-- Filter Bar -->
                    <RowDefinition Height="*"/>   <!-- Content -->
                    <RowDefinition Height="100"/>  <!-- Actions -->
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#1E1E1E" 
                        CornerRadius="0">
                    <Grid>
                        <TextBlock Text="Gallery" 
                                   Foreground="White" 
                                   FontSize="36" 
                                   FontWeight="Light"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                        
                        <!-- Close Button -->
                        <Button x:Name="CloseButton" 
                                Content="✕" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,15,0"
                                Width="50" 
                                Height="50"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="28"
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Filter Bar -->
                <Border Grid.Row="1" 
                        Background="#252526" 
                        BorderBrush="#3E3E42"
                        BorderThickness="0,1">
                    <Grid Margin="20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Event Filter -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Event:" Foreground="#CCCCCC" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="EventFilterCombo" 
                                      Width="200" 
                                      Height="45"
                                      SelectionChanged="EventFilter_SelectionChanged">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Search Box -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                            <TextBlock Text="Search:" Foreground="#CCCCCC" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchTextBox" 
                                     Width="300" 
                                     Height="45"
                                     Background="#3C3C3C"
                                     Foreground="White"
                                     BorderBrush="#555555"
                                     Padding="10,0"
                                     TextChanged="SearchTextBox_TextChanged"/>
                        </StackPanel>
                        
                        <!-- Date Filter -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                            <TextBlock Text="Date:" Foreground="#CCCCCC" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="DateFilterCombo" 
                                      Width="150" 
                                      Height="45"
                                      SelectionChanged="DateFilter_SelectionChanged">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="Today"/>
                                <ComboBoxItem Content="Yesterday"/>
                                <ComboBoxItem Content="This Week"/>
                                <ComboBoxItem Content="This Month"/>
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#555555"/>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Refresh Button -->
                        <Button Grid.Column="3" 
                                x:Name="RefreshButton"
                                Content="🔄" 
                                Width="45" 
                                Height="45"
                                Margin="10,0,0,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="20"
                                Cursor="Hand"
                                Click="RefreshButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#106EBE"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Sessions Content -->
                <Grid Grid.Row="2" Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Status Bar -->
                    <TextBlock x:Name="StatusText" 
                               Grid.Row="0"
                               Text="Loading sessions..." 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    
                    <!-- Sessions List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="SessionsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3E3E42"
                                            BorderBrush="#555555"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Margin="10"
                                            Width="320"
                                            Height="240"
                                            Cursor="Hand"
                                            MouseEnter="SessionCard_MouseEnter"
                                            MouseLeave="SessionCard_MouseLeave"
                                            MouseLeftButtonDown="SessionCard_Click"
                                            Tag="{Binding}">
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="160"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Session Thumbnail -->
                                            <Border Grid.Row="0" 
                                                    Background="#2D2D30"
                                                    CornerRadius="8,8,0,0">
                                                <Grid>
                                                    <!-- Actual thumbnail image -->
                                                    <Image Source="{Binding ThumbnailPath}" 
                                                           Stretch="UniformToFill"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                        <Image.Clip>
                                                            <RectangleGeometry Rect="0,0,320,160" RadiusX="8" RadiusY="8"/>
                                                        </Image.Clip>
                                                    </Image>
                                                    
                                                    <!-- Fallback placeholder if no thumbnail -->
                                                    <TextBlock Text="📸" 
                                                               FontSize="64" 
                                                               Foreground="#888888"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ThumbnailPath}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ThumbnailPath}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    
                                                    <!-- Photo count badge -->
                                                    <Border Background="#0078D4"
                                                            CornerRadius="10"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0,10,10,0"
                                                            Padding="8,2">
                                                        <TextBlock Text="{Binding PhotoCountText}" 
                                                                   Foreground="White" 
                                                                   FontSize="14"
                                                                   FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                            
                                            <!-- Session Info - Event Name Only -->
                                            <Grid Grid.Row="1" 
                                                  Margin="12,8">
                                                <TextBlock Text="{Binding EventName}" 
                                                           Foreground="White" 
                                                           FontSize="20" 
                                                           FontWeight="Bold"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                
                <!-- Action Bar - Simplified with Back Button Only -->
                <Border Grid.Row="3" 
                        Background="#252526" 
                        BorderBrush="#3E3E42"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,8">
                    <Grid Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Info -->
                        <TextBlock x:Name="SelectedSessionText" 
                                   Grid.Column="0"
                                   Text="Click on a session to load it" 
                                   Foreground="#AAAAAA" 
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        
                        <!-- Back Button -->
                        <Button x:Name="BackButton" 
                                Grid.Column="1"
                                Content="← Back" 
                                Width="140" 
                                Height="50"
                                Background="#555555"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="18"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BackButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="25">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#666666"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>