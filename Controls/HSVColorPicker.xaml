<UserControl x:Class="Photobooth.Controls.HSVColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650"
             Background="#FF808080">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        
        <!-- Named Colors Panel -->
        <Border Grid.Column="0" Background="#FFB8B8B8" BorderBrush="#FF999999" BorderThickness="1" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="NamedColorsList" Margin="5">
                    <!-- Named colors will be populated from code-behind -->
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Color Wheel and Selection Area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- HSV Color Wheel Container -->
            <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Width="300" Height="300">
                    <!-- Color Wheel Background -->
                    <Canvas x:Name="ColorWheelCanvas" Width="300" Height="300">
                        <!-- Color wheel will be drawn here -->
                        <Ellipse x:Name="ColorWheel" Width="300" Height="300" Stroke="#FF666666" StrokeThickness="2">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="Red" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        
                        <!-- Saturation/Brightness Square -->
                        <Rectangle x:Name="SaturationBrightnessSquare" 
                                   Width="150" Height="150" 
                                   Canvas.Left="75" Canvas.Top="75"
                                   Stroke="#FF333333" StrokeThickness="1">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="Red" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <!-- Hue Selector -->
                        <Ellipse x:Name="HueSelector" Width="8" Height="8" 
                                 Fill="Black" Stroke="White" StrokeThickness="2"
                                 Canvas.Left="146" Canvas.Top="25"/>
                        
                        <!-- Saturation/Brightness Selector -->
                        <Ellipse x:Name="SatBrightSelector" Width="8" Height="8" 
                                 Fill="Transparent" Stroke="Black" StrokeThickness="2"
                                 Canvas.Left="146" Canvas.Top="146"/>
                    </Canvas>
                </Grid>
            </Viewbox>
            
            <!-- Color Palette Strip -->
            <Border Grid.Row="1" Background="White" BorderBrush="#FF999999" BorderThickness="1" Margin="0,10,0,0">
                <WrapPanel x:Name="ColorPaletteStrip" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Color palette buttons will be added from code-behind -->
                </WrapPanel>
            </Border>
            
            <!-- Current Color Preview -->
            <Border Grid.Row="2" Background="White" BorderBrush="#FF999999" BorderThickness="1" 
                    Width="100" Height="50" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Rectangle x:Name="CurrentColorPreview" Fill="Red" Margin="2"/>
            </Border>
        </Grid>
        
        <!-- Values Panel -->
        <StackPanel Grid.Column="2" Margin="5" Background="#FFB8B8B8">
            <Border BorderBrush="#FF999999" BorderThickness="1" Background="White" Margin="5">
                <StackPanel Margin="10">
                    <TextBlock Text="HSV Values" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    
                    <!-- Hue -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="H:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="HueTextBox" Width="40" Height="20" Text="0" 
                                 VerticalAlignment="Center" TextChanged="HueTextBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- Saturation -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="S:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="SaturationTextBox" Width="40" Height="20" Text="100" 
                                 VerticalAlignment="Center" TextChanged="SaturationTextBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- Value/Brightness -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="V:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="ValueTextBox" Width="40" Height="20" Text="100" 
                                 VerticalAlignment="Center" TextChanged="ValueTextBox_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <Border BorderBrush="#FF999999" BorderThickness="1" Background="White" Margin="5">
                <StackPanel Margin="10">
                    <TextBlock Text="RGB Values" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    
                    <!-- Red -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="R:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="RedTextBox" Width="40" Height="20" Text="255" 
                                 VerticalAlignment="Center" TextChanged="RedTextBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- Green -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="G:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="GreenTextBox" Width="40" Height="20" Text="0" 
                                 VerticalAlignment="Center" TextChanged="GreenTextBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- Blue -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="B:" Width="15" VerticalAlignment="Center"/>
                        <TextBox x:Name="BlueTextBox" Width="40" Height="20" Text="0" 
                                 VerticalAlignment="Center" TextChanged="BlueTextBox_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>