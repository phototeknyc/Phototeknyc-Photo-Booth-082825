<UserControl x:Class="Photobooth.Controls.GalleryOverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.Controls"
             xmlns:converters="clr-namespace:Photobooth.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Converters for handling null images -->
        <converters:NullImageSourceConverter x:Key="NullImageSourceConverter"/>
        <converters:NullToEmptyStringConverter x:Key="NullToEmptyStringConverter"/>
        
        <!-- Session Group Header Style -->
        <Style x:Key="SessionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,15,10,5"/>
        </Style>
        
        <!-- Photo Thumbnail Style -->
        <Style x:Key="PhotoThumbnailStyle" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E57373"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#E5000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Container with rounded corners -->
        <Border Background="#1E1E1E" 
                CornerRadius="20" 
                Margin="50"
                Grid.RowSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header Bar -->
                <Border Grid.Row="0" Background="#2A2A2A" CornerRadius="20,20,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📸 Event Gallery" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="0,0,20,0"/>
                            
                            <TextBlock x:Name="photoCountText" 
                                       Text="0 photos in 0 sessions" 
                                       FontSize="18" 
                                       Foreground="#CCCCCC"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="PRINT" 
                                    x:Name="printButton"
                                    ToolTip="Print Selected Photos"
                                    Click="PrintButton_Click"
                                    Margin="0,0,10,0"
                                    Width="80"
                                    Height="40"
                                    Background="#FF9800"
                                    Foreground="White"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Visibility="Visible"
                                    Style="{x:Null}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFB74D"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#F57C00"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Content="🔄" 
                                    x:Name="refreshButton"
                                    ToolTip="Refresh Gallery"
                                    Click="RefreshButton_Click"
                                    Margin="0,0,10,0"
                                    Width="40"
                                    Height="40"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="20"
                                    BorderThickness="0"
                                    Style="{x:Null}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#66BB6A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Content="✖" 
                                    Click="CloseButton_Click"
                                    Style="{StaticResource CloseButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Main Gallery Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
                    <ItemsControl x:Name="sessionsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <!-- Session Header -->
                                    <Border Background="#2A2A2A" Margin="10,10,10,0" CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding SessionName}" 
                                                       Style="{StaticResource SessionHeaderStyle}"/>
                                            
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding SessionTime}" 
                                                       FontSize="14" 
                                                       Foreground="#AAAAAA"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0"/>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding PhotoCount}" 
                                                       FontSize="14" 
                                                       Foreground="#4CAF50"
                                                       VerticalAlignment="Center"
                                                       Margin="10"/>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Photos in Session -->
                                    <ItemsControl ItemsSource="{Binding Photos}" Margin="10,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource PhotoThumbnailStyle}"
                                                        MouseLeftButtonUp="Photo_Click"
                                                        Tag="{Binding FilePath}">
                                                    <Grid>
                                                        <!-- Photo Thumbnail -->
                                                        <Image Source="{Binding ThumbnailPath, Converter={StaticResource NullImageSourceConverter}}" 
                                                               Stretch="UniformToFill"/>
                                                        
                                                        <!-- Photo Type Badge -->
                                                        <Border Background="{Binding TypeBadgeColor}" 
                                                                CornerRadius="4"
                                                                Padding="5,2"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Top"
                                                                Margin="5">
                                                            <TextBlock Text="{Binding PhotoType}" 
                                                                       Foreground="White" 
                                                                       FontSize="11"
                                                                       FontWeight="Bold"/>
                                                        </Border>
                                                        
                                                        <!-- Photo Info Overlay -->
                                                        <Border Background="#CC000000" 
                                                                VerticalAlignment="Bottom"
                                                                CornerRadius="0,0,8,8">
                                                            <StackPanel Margin="5">
                                                                <TextBlock Text="{Binding FileName, Converter={StaticResource NullToEmptyStringConverter}}" 
                                                                           Foreground="White" 
                                                                           FontSize="11"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                                <TextBlock Text="{Binding FileSize, Converter={StaticResource NullToEmptyStringConverter}}" 
                                                                           Foreground="#AAAAAA" 
                                                                           FontSize="10"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#2A2A2A" CornerRadius="0,0,20,20" Padding="20,10">
                    <Grid>
                        <TextBlock x:Name="statusText" 
                                   Text="Ready" 
                                   Foreground="#CCCCCC"
                                   FontSize="14"
                                   HorizontalAlignment="Left"/>
                        
                        <TextBlock x:Name="selectedInfoText" 
                                   Text="" 
                                   Foreground="#4CAF50"
                                   FontSize="14"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Full Screen Image Viewer Overlay -->
        <Grid x:Name="imageViewerOverlay" 
              Grid.RowSpan="3" 
              Background="#F0000000" 
              Visibility="Collapsed"
              MouseLeftButtonUp="ImageViewerOverlay_Click">
            <Grid>
                <Image x:Name="fullScreenImage" 
                       Stretch="Uniform"
                       Margin="80"/>
                
                <!-- Close Button -->
                <Button Content="✖" 
                        Click="CloseImageViewer_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="60"
                        Style="{StaticResource CloseButtonStyle}"/>
                
                <!-- Navigation Buttons -->
                <Button x:Name="prevImageButton" 
                        Content="◀" 
                        Click="PrevImage_Click"
                        Width="60"
                        Height="60"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="40"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="30"
                        Style="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66BB6A"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#757575"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="nextImageButton" 
                        Content="▶" 
                        Click="NextImage_Click"
                        Width="60"
                        Height="60"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="40"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="30"
                        Style="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="30">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66BB6A"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#757575"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Image Info Bar -->
                <Border Background="#CC000000" 
                        VerticalAlignment="Bottom"
                        Padding="20,15"
                        Margin="80,0,80,80">
                    <TextBlock x:Name="imageInfoText"
                               Text=""
                               Foreground="White"
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Print Copies Modal -->
        <local:PrintCopiesModal x:Name="printCopiesModal" />
    </Grid>
</UserControl>