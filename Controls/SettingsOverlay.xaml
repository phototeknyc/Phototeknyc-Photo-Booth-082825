<UserControl x:Class="Photobooth.Controls.SettingsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <!-- Modern Dark Theme Styles -->
        <Style x:Key="CategoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353535"/>
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SettingToggleStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Border" 
                                    Width="50" Height="26"
                                    Background="#505050"
                                    CornerRadius="13">
                                <Grid>
                                    <Ellipse x:Name="Indicator"
                                             Width="20" Height="20"
                                             Fill="White"
                                             HorizontalAlignment="Left"
                                             Margin="3,0,0,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Indicator" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Height="4" Background="#404040" CornerRadius="2" Grid.Row="0" VerticalAlignment="Center">
                                <Border x:Name="PART_SelectionRange" 
                                        HorizontalAlignment="Left"
                                        Background="#4CAF50"
                                        CornerRadius="2"/>
                            </Border>
                            <Track x:Name="PART_Track" Grid.Row="0">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="16" Height="16" Fill="#4CAF50"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Main Overlay -->
    <Grid x:Name="MainOverlay" 
          Background="#CC000000" 
          Visibility="Collapsed">
        
        <!-- Animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <!-- Content Container - Full Width and Height -->
        <Border Background="#2D2D30" 
                CornerRadius="20" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="30,20,30,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="10" Opacity="0.7"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="30,25,30,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Settings" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Auto-Save Enabled ✓" 
                                   FontSize="12" 
                                   Foreground="#4CAF50" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <Button x:Name="CloseButton"
                            Content="✕"
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
                
                <!-- Settings Categories Grid -->
                <ScrollViewer Grid.Row="1" 
                              Margin="20,0,20,20"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Border Background="#303030" CornerRadius="6"/>
                                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#606060" CornerRadius="6"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    
                    <ItemsControl x:Name="CategoriesGrid">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="220" 
                                        Height="260"
                                        Style="{StaticResource CategoryCardStyle}"
                                        MouseLeftButtonDown="CategoryCard_Click"
                                        Tag="{Binding}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Category Icon -->
                                        <Border Grid.Row="0" 
                                                Width="60" Height="60"
                                                Background="#404040"
                                                CornerRadius="30"
                                                Margin="0,20,0,10"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="28"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Category Name -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>
                                        
                                        <!-- Quick Settings Preview -->
                                        <StackPanel Grid.Row="2" 
                                                    Margin="15,0,15,10"
                                                    VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Summary}"
                                                       FontSize="11"
                                                       Foreground="#A0A0A0"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center"
                                                       MaxHeight="60"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        
                                        <!-- Settings Count Badge -->
                                        <Border Grid.Row="3"
                                                Background="#4CAF50"
                                                CornerRadius="10"
                                                Padding="8,4"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,15">
                                            <TextBlock FontSize="11"
                                                       Foreground="White"
                                                       FontWeight="SemiBold">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} settings">
                                                        <Binding Path="SettingsCount"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Footer -->
                <Grid Grid.Row="2" Margin="30,0,30,25">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="ResetButton"
                                Content="Reset to Defaults"
                                Padding="20,10"
                                Background="#FF5722"
                                Foreground="White"
                                FontSize="14"
                                Click="ResetButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6B3A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="SaveButton"
                                Content="Auto-Save ✓"
                                Margin="0,0,10,0"
                                Padding="25,10"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="14"
                                Click="SaveButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5CBF60"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="DoneButton"
                                Content="Done"
                                Padding="25,10"
                                Background="#606060"
                                Foreground="White"
                                FontSize="14"
                                Click="DoneButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#707070"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Category Detail Panel (slides in from right) -->
        <Border x:Name="CategoryDetailPanel"
                Background="#2D2D30"
                Width="400"
                HorizontalAlignment="Right"
                Visibility="Collapsed"
                RenderTransformOrigin="1,0">
            <Border.RenderTransform>
                <TranslateTransform x:Name="DetailPanelTransform" X="400"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Detail Header -->
                <Grid Grid.Row="0" Background="#252525" Height="60">
                    <Button x:Name="BackButton"
                            Content="←"
                            FontSize="24"
                            Background="Transparent"
                            Foreground="White"
                            Width="50"
                            HorizontalAlignment="Left"
                            Click="BackButton_Click"/>
                    
                    <TextBlock x:Name="CategoryTitle"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Settings List -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20">
                    <StackPanel x:Name="SettingsListPanel">
                        <!-- Settings items will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Apply Button -->
                <Button Grid.Row="2"
                        x:Name="ApplyButton"
                        Content="Apply Changes"
                        Height="50"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        Click="ApplyButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>