<UserControl x:Class="Photobooth.Controls.TemplateDesignerOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Photobooth.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Visibility="Collapsed">
    
    <!-- Main overlay grid -->
    <Grid x:Name="MainOverlay">
        <!-- Full screen opaque background -->
        <Rectangle Fill="#1E1E1E" Opacity="1"/>
        
        <!-- Main content container - Full Screen -->
        <Border Background="#1E1E1E" 
                CornerRadius="0" 
                Margin="0"
                BorderBrush="#333"
                BorderThickness="0">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with title and close button -->
                <Border Grid.Row="0" 
                        Background="#252525" 
                        CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <TextBlock Grid.Column="0" 
                                   Text="&#xE8B8;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="24"
                                   Foreground="#4CAF50"
                                   VerticalAlignment="Center"
                                   Margin="20,0,10,0"/>
                        
                        <!-- Title -->
                        <TextBlock Grid.Column="1" 
                                   x:Name="OverlayTitle"
                                   Text="Template Designer"
                                   FontSize="22"
                                   FontWeight="Light"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        
                        <!-- Action buttons -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    Margin="0,0,20,0">
                            
                            <!-- Save button -->
                            <Button x:Name="SaveTemplateButton"
                                    Width="120"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    Click="SaveTemplate_Click"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#4CAF50"
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="&#xE74E;" 
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="16"
                                                           Foreground="White"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="Save"
                                                           FontSize="14"
                                                           Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#5CBF5F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3A9F3F"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- Close button - Fullscreen style -->
                            <Button x:Name="CloseButton"
                                    Width="100"
                                    Height="36"
                                    Margin="10,0,0,0"
                                    Click="CloseOverlay_Click"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#FF4444"
                                                CornerRadius="6"
                                                BorderThickness="0">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="&#xE711;" 
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="14"
                                                           Foreground="White"
                                                           Margin="0,0,6,0"/>
                                                <TextBlock Text="Close"
                                                           FontSize="14"
                                                           Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF6666"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#CC3333"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Designer content frame -->
                <Border Grid.Row="1" 
                        Background="#1A1A1A"
                        CornerRadius="0"
                        ClipToBounds="True">
                    <Frame x:Name="DesignerFrame"
                           NavigationUIVisibility="Hidden"
                           Focusable="False"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>