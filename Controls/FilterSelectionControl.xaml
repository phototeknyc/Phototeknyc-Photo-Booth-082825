<UserControl x:Class="Photobooth.Controls.FilterSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Filter Item Template -->
        <Style x:Key="FilterItemStyle" TargetType="Border">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Selected Filter Highlight -->
        <Style x:Key="SelectedBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filter Strip Container -->
        <Border Grid.Row="0" Padding="10,5">
            <ScrollViewer x:Name="filterScrollViewer" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Hidden"
                          PanningMode="HorizontalOnly">
                <ItemsControl x:Name="filterItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource FilterItemStyle}"
                                    MouseLeftButtonUp="FilterItem_Click"
                                    Tag="{Binding}">
                                <Border Style="{StaticResource SelectedBorderStyle}"
                                        CornerRadius="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Filter Preview Thumbnail -->
                                        <Border Grid.Row="0" 
                                                Margin="5,5,5,2"
                                                CornerRadius="5"
                                                ClipToBounds="True">
                                            <Image Source="{Binding PreviewImage}" 
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Filter Name -->
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Name}"
                                                   HorizontalAlignment="Center"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   Margin="0,2,0,5"/>
                                        
                                        <!-- Selected Indicator -->
                                        <Border Grid.Row="0" 
                                                HorizontalAlignment="Right" 
                                                VerticalAlignment="Top"
                                                Margin="0,8,8,0"
                                                Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid Width="20" Height="20">
                                                <Ellipse Fill="#4CAF50"/>
                                                <TextBlock Text="✓" 
                                                           Foreground="White" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"
                                                           FontWeight="Bold"
                                                           FontSize="12"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Loading Indicator -->
        <Border x:Name="loadingIndicator" 
                Grid.Row="0" 
                Background="#AA000000" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="100" 
                             Height="4"
                             Foreground="#4CAF50"/>
                <TextBlock Text="Generating previews..." 
                           Foreground="White" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>