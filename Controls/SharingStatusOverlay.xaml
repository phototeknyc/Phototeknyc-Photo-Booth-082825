<UserControl x:Class="Photobooth.Controls.SharingStatusOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <UserControl.Resources>
        <!-- Modern Dark Theme Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5CBF60"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#606060"/>
                                <Setter Property="Foreground" Value="#909090"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5252"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QueueItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="SettingToggleStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Border" 
                                    Width="50" Height="26"
                                    Background="#505050"
                                    CornerRadius="13">
                                <Grid>
                                    <Ellipse x:Name="Indicator"
                                             Width="20" Height="20"
                                             Fill="White"
                                             HorizontalAlignment="Left"
                                             Margin="3,0,0,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Indicator" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Main overlay container -->
    <Grid x:Name="MainOverlay" 
          Background="#CC000000" 
          Visibility="Collapsed">
        
        <!-- Animation -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        
        <!-- Content Container - Full Width and Height -->
        <Border Background="#2D2D30" 
                CornerRadius="20" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="40,30,40,30">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="10" Opacity="0.7"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Margin="40,30,40,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📤 Upload &amp; Sharing Queue" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NetworkStatusText"
                                   Text="Network: Online"
                                   FontSize="16"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Content="✕"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Click="Close_Click"/>
                </Grid>
                
                <!-- Tab Headers -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,-1">
                    <Button x:Name="UploadsTabButton"
                            Content="📷 Uploads"
                            Style="{StaticResource ActiveTabButtonStyle}"
                            MinWidth="150"
                            Click="UploadsTab_Click"/>
                    <Button x:Name="SMSTabButton"
                            Content="💬 SMS Queue"
                            Style="{StaticResource TabButtonStyle}"
                            MinWidth="150"
                            Margin="2,0,0,0"
                            Click="SMSTab_Click"/>
                    <Button x:Name="EmailTabButton"
                            Content="✉ Email Queue"
                            Style="{StaticResource TabButtonStyle}"
                            MinWidth="150"
                            Margin="2,0,0,0"
                            Click="EmailTab_Click"/>
                </StackPanel>
                
                <!-- Tab Content -->
                <Border Grid.Row="2" 
                        Background="#1E1E1E" 
                        CornerRadius="0,0,0,0"
                        Margin="40,0,40,20">
                    <Grid>
                        <!-- Uploads Tab -->
                    <Grid x:Name="UploadsTab" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Upload Queue Header -->
                        <Border Grid.Row="0" 
                                Background="#2A2A2A" 
                                Padding="20,15"
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="Upload Queue:" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="UploadCountText"
                                               Text=" 0 items"
                                               FontSize="18"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                
                                <CheckBox x:Name="AutoProcessCheckBox" 
                                          Style="{StaticResource SettingToggleStyle}"
                                          IsChecked="True"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Checked="AutoProcess_Changed"
                                          Unchecked="AutoProcess_Changed"
                                          ToolTip="Auto-process queue items"/>
                            </Grid>
                        </Border>
                        
                        <!-- Upload Items List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="15">
                            <ItemsControl x:Name="UploadItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource QueueItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding StatusIcon}"
                                                           FontSize="24"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,15,0"/>
                                                
                                                <!-- Item Details -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding SessionId}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                    <TextBlock Text="{Binding StatusDisplay}"
                                                               FontSize="14"
                                                               Foreground="#B0B0B0"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding TimeDisplay}"
                                                               FontSize="12"
                                                               Foreground="#808080"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal">
                                                    <Button Content="🔄 Retry"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Tag="{Binding}"
                                                            Click="RetryUpload_Click"
                                                            Margin="5,0"/>
                                                    <Button Content="🗑 Delete"
                                                            Style="{StaticResource DangerButtonStyle}"
                                                            Tag="{Binding}"
                                                            Click="DeleteUpload_Click"
                                                            Margin="5,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- SMS Tab -->
                    <Grid x:Name="SMSTab" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- SMS Queue Header -->
                        <Border Grid.Row="0" 
                                Background="#2A2A2A" 
                                Padding="20,15"
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="SMS Queue:" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SMSCountText"
                                               Text=" 0 items"
                                               FontSize="18"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- SMS Items List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="15">
                            <ItemsControl x:Name="SMSItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource QueueItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding StatusIcon}"
                                                           FontSize="24"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,15,0"/>
                                                
                                                <!-- Item Details -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="White">
                                                        <Run Text="📱 "/>
                                                        <Run Text="{Binding PhoneNumber}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding SessionId}"
                                                               FontSize="14"
                                                               Foreground="#B0B0B0"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding StatusDisplay}"
                                                               FontSize="14"
                                                               Foreground="#B0B0B0"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding TimeDisplay}"
                                                               FontSize="12"
                                                               Foreground="#808080"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal">
                                                    <Button Content="🔄 Retry"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Tag="{Binding}"
                                                            Click="RetrySMS_Click"
                                                            Margin="5,0"/>
                                                    <Button Content="🗑 Delete"
                                                            Style="{StaticResource DangerButtonStyle}"
                                                            Tag="{Binding}"
                                                            Click="DeleteSMS_Click"
                                                            Margin="5,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- Email Tab -->
                    <Grid x:Name="EmailTab" Visibility="Collapsed">
                        <TextBlock Text="Email queue functionality coming soon..."
                                   FontSize="18"
                                   Foreground="#808080"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                    </Grid>
                </Border>
                
                <!-- Footer Actions -->
                <Border Grid.Row="3" 
                        Background="#252525"
                        CornerRadius="0,0,20,20"
                        Padding="30,20">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="ProcessAllButton"
                                    Content="▶ Process All"
                                    Style="{StaticResource ActionButtonStyle}"
                                    MinWidth="140"
                                    Click="ProcessAll_Click"/>
                            <Button x:Name="ClearCompletedButton"
                                    Content="✓ Clear Completed"
                                    MinWidth="140"
                                    Click="ClearCompleted_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                        <Setter Property="Background" Value="#FF9800"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFB74D"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="PauseButton"
                                    Content="⏸ Pause Processing"
                                    MinWidth="160"
                                    Click="Pause_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                        <Setter Property="Background" Value="#9C27B0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#BA68C8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        
                        <TextBlock x:Name="ProcessingStatusText"
                                   Text="Processing: Active"
                                   FontSize="16"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>