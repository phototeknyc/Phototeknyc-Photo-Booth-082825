<UserControl x:Class="Photobooth.Controls.SimpleDesignerCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Photobooth.Controls"
             mc:Ignorable="d"
             Focusable="True"
             d:DesignHeight="1800" d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Subtle checkerboard pattern brush -->
        <DrawingBrush x:Key="CheckerboardBrush" TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing Brush="#FFF8F8F8">
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,20,20"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <!-- Styles for the canvas -->
        <Style x:Key="CanvasStyle" TargetType="Canvas">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ClipToBounds" Value="True"/>
        </Style>

        <!-- Grid lines style -->
        <Style x:Key="GridLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="#FFD8D8D8"/>
            <Setter Property="StrokeThickness" Value="0.5"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main canvas container -->
        <Border BorderBrush="#FF2B2B2B" BorderThickness="2" Background="{Binding CanvasBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" CornerRadius="1" ClipToBounds="False">
            <Grid x:Name="CanvasContainer" ClipToBounds="False">
                <!-- Background grid (optional) -->
                <Canvas x:Name="GridCanvas" IsHitTestVisible="False">
                    <!-- Grid lines will be added programmatically -->
                </Canvas>

                <!-- Main design canvas -->
                <Canvas x:Name="MainCanvas"
                        Style="{StaticResource CanvasStyle}"
                        MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="MainCanvas_MouseLeftButtonUp"
                        MouseMove="MainCanvas_MouseMove"
                        TouchDown="MainCanvas_TouchDown"
                        AllowDrop="True"
                        Drop="MainCanvas_Drop"
                        DragOver="MainCanvas_DragOver">
                </Canvas>

                <!-- Selection handles canvas (overlay) -->
                <Canvas x:Name="HandleCanvas" IsHitTestVisible="True" Background="{x:Null}" Panel.ZIndex="9999">
                    <!-- Selection handles will be added here -->
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</UserControl>
