        <!-- Touch-Friendly Alignment Popup -->
        <Border x:Name="AlignmentPopup"
                Visibility="Collapsed"
                Grid.RowSpan="3"
                Background="#AA000000"
                MouseDown="AlignmentPopup_BackgroundClick">
