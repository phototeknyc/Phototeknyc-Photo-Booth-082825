<UserControl x:Class="Photobooth.Controls.TouchTemplateDesigner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.Controls"
             xmlns:dc="clr-namespace:DesignerCanvas;assembly=DesignerCanvas"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.Resources>
        <!-- Modern color scheme -->
        <Color x:Key="PrimaryColor">#6C63FF</Color>
        <Color x:Key="SecondaryColor">#FF6B6B</Color>
        <Color x:Key="AccentColor">#4ECDC4</Color>
        <Color x:Key="DarkBg">#1A1A2E</Color>
        <Color x:Key="MediumBg">#16213E</Color>
        <Color x:Key="LightBg">#0F3460</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DarkBgBrush" Color="{StaticResource DarkBg}"/>
        <SolidColorBrush x:Key="MediumBgBrush" Color="{StaticResource MediumBg}"/>
        
        <!-- Adaptive touch-friendly button style -->
        <Style x:Key="TouchToolButton" TargetType="Button">
            <Setter Property="MinWidth" Value="44"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="{StaticResource MediumBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock x:Name="tooltipText" 
                                          Text="{TemplateBinding ToolTip}"
                                          FontSize="10"
                                          FontFamily="Segoe UI"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"
                                          Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel Style -->
        <Style x:Key="ToolPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkBgBrush}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Background="#0F0F0F">
        <!-- Responsive layout that adapts to orientation -->
        <Grid x:Name="LayoutGrid">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="TopToolbarRow" Height="Auto" MinHeight="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition x:Name="BottomToolbarRow" Height="Auto" MinHeight="80"/>
            </Grid.RowDefinitions>

            <!-- Top Toolbar - Responsive -->
            <Border Grid.Row="0" Style="{StaticResource ToolPanel}" x:Name="TopToolbar">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- File Operations - Wrappable -->
                    <WrapPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="NewTemplate_Click" 
                                ToolTip="New" Content="&#xE7C3;"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="SaveTemplate_Click" 
                                ToolTip="Save" Content="&#xE74E;"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="LoadTemplate_Click" 
                                ToolTip="Load" Content="&#xE8E5;"/>
                        <Rectangle Width="2" Fill="Gray" Margin="10,15"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="ImportTemplate_Click" 
                                ToolTip="Import" Content="&#xE8B5;"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="ExportTemplate_Click" 
                                ToolTip="Export" Content="&#xEDE1;"/>
                    </WrapPanel>

                    <!-- Template Info -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Template: " Foreground="Gray" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TemplateNameText" Text="Untitled" 
                                  Foreground="White" FontSize="18" FontWeight="Bold" 
                                  VerticalAlignment="Center" Margin="5,0"/>
                        <Button Content="&#xE70F;" FontFamily="Segoe MDL2 Assets"
                               Background="Transparent" BorderThickness="0"
                               Foreground="Gray" FontSize="16"
                               Click="RenameTemplate_Click"
                               VerticalAlignment="Center" Margin="5,0"/>
                    </StackPanel>

                    <!-- Canvas Size Display - Responsive -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5" VerticalAlignment="Center" x:Name="CanvasSizePanel">
                        <TextBlock Text="Size: " Foreground="Gray" FontSize="14"/>
                        <TextBlock x:Name="CanvasSizeText" Text="600 x 1800" 
                                  Foreground="White" FontSize="14" Margin="5,0"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="ChangeCanvasSize_Click" 
                                ToolTip="Resize" Content="&#xE740;" Margin="10,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Canvas Container - Adaptive -->
            <Border Grid.Row="1" Margin="5" CornerRadius="10" Background="#1E1E1E" x:Name="CanvasContainerBorder">
                <Grid>
                    <!-- Zoom Controls - Adaptive positioning -->
                    <StackPanel x:Name="ZoomControlsPanel" Orientation="Vertical" HorizontalAlignment="Right" 
                               VerticalAlignment="Top" Margin="10">
                        <Border Style="{StaticResource ToolPanel}" Padding="5">
                            <StackPanel>
                                <Button Style="{StaticResource TouchToolButton}" 
                                        Click="ZoomIn_Click" Content="&#xE8A3;"/>
                                <TextBlock x:Name="ZoomLevelText" Text="100%" 
                                          Foreground="White" FontSize="12" 
                                          HorizontalAlignment="Center" Margin="0,5"/>
                                <Button Style="{StaticResource TouchToolButton}" 
                                        Click="ZoomOut_Click" Content="&#xE71F;"/>
                                <Rectangle Height="2" Fill="Gray" Margin="10,10"/>
                                <Button Style="{StaticResource TouchToolButton}" 
                                        Click="ZoomFit_Click" Content="&#xE9A6;" ToolTip="Fit"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Canvas Scroll Viewer - Responsive margins -->
                    <ScrollViewer x:Name="CanvasScrollViewer" 
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 PanningMode="Both"
                                 Margin="10">
                        <Grid x:Name="CanvasContainer">
                            <Grid.LayoutTransform>
                                <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Grid.LayoutTransform>
                            
                            <!-- The actual designer canvas using ModernUICustomizationCanvas -->
                            <local:ModernUICustomizationCanvas x:Name="DesignerCanvas"
                                                               Width="600" Height="1800"
                                                               Background="White"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- Side Tools - Adaptive to orientation -->
                    <Border x:Name="SideToolsPanel" Style="{StaticResource ToolPanel}" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           MinWidth="60"
                           MaxWidth="100">
                        <StackPanel Margin="10">
                            <!-- Add Elements -->
                            <TextBlock Text="Add" Foreground="Gray" FontSize="12" 
                                      HorizontalAlignment="Center" Margin="0,5"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="AddPlaceholder_Click" 
                                    ToolTip="Photo" Content="&#xE722;"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="AddText_Click" 
                                    ToolTip="Text" Content="&#xE8D2;"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="AddImage_Click" 
                                    ToolTip="Image" Content="&#xEB9F;"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="AddShape_Click" 
                                    ToolTip="Shape" Content="&#xF156;"/>
                            
                            <Rectangle Height="2" Fill="Gray" Margin="10,15"/>
                            
                            <!-- Arrange Tools -->
                            <TextBlock Text="Arrange" Foreground="Gray" FontSize="12" 
                                      HorizontalAlignment="Center" Margin="0,5"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="BringToFront_Click" 
                                    ToolTip="Front" Content="&#xE898;"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="SendToBack_Click" 
                                    ToolTip="Back" Content="&#xE899;"/>
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="AlignItems_Click" 
                                    ToolTip="Align" Content="&#xE8E4;"/>
                            
                            <Rectangle Height="2" Fill="Gray" Margin="10,15"/>
                            
                            <!-- Edit Tools -->
                            <Button Style="{StaticResource TouchToolButton}" 
                                    Click="DeleteSelected_Click" 
                                    ToolTip="Delete" Content="&#xE74D;" 
                                    Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Bottom Toolbar - Responsive -->
            <Border Grid.Row="2" Style="{StaticResource ToolPanel}" x:Name="BottomToolbar">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quick Actions - Wrappable -->
                    <WrapPanel Grid.Column="0" Orientation="Horizontal" Margin="10">
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="Undo_Click" 
                                ToolTip="Undo" Content="&#xE7A7;"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="Redo_Click" 
                                ToolTip="Redo" Content="&#xE7A6;"/>
                        <Rectangle Width="2" Fill="Gray" Margin="10,20"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="Copy_Click" 
                                ToolTip="Copy" Content="&#xE8C8;"/>
                        <Button Style="{StaticResource TouchToolButton}" 
                                Click="Paste_Click" 
                                ToolTip="Paste" Content="&#xE77F;"/>
                    </WrapPanel>

                    <!-- Properties Panel Toggle -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ToggleButton x:Name="PropertiesToggle" 
                                     Width="150" Height="50"
                                     Background="{StaticResource MediumBgBrush}"
                                     Foreground="White"
                                     BorderThickness="0"
                                     FontSize="16"
                                     Click="PropertiesToggle_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE90F;" FontFamily="Segoe MDL2 Assets" 
                                          VerticalAlignment="Center" Margin="5,0"/>
                                <TextBlock Text="Properties" VerticalAlignment="Center" Margin="5,0"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>

                    <!-- Exit Button -->
                    <Button Grid.Column="2" 
                           Width="120" Height="50"
                           Margin="20,0"
                           Background="#FF6B6B"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="18"
                           Click="Close_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                                      VerticalAlignment="Center" Margin="5,0"/>
                            <TextBlock Text="Close" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- Properties Panel - Responsive width -->
        <Border x:Name="PropertiesPanel" 
               MinWidth="300"
               MaxWidth="500"
               Width="Auto"
               HorizontalAlignment="Right"
               Background="{StaticResource DarkBgBrush}"
               Visibility="Collapsed">
            <Border.RenderTransform>
                <TranslateTransform x:Name="PropertiesPanelTransform" X="400"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Properties Header -->
                <Border Grid.Row="0" Background="{StaticResource MediumBgBrush}">
                    <Grid>
                        <TextBlock Text="Properties" 
                                  Foreground="White" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  Margin="20,0"/>
                        <Button HorizontalAlignment="Right"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontSize="20"
                               Content="&#xE711;"
                               FontFamily="Segoe MDL2 Assets"
                               Click="CloseProperties_Click"
                               Width="60" Height="60"/>
                    </Grid>
                </Border>

                <!-- Properties Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PropertiesContent" Margin="20">
                        <!-- Dynamic properties will be added here based on selection -->
                        <TextBlock Text="Select an item to view properties" 
                                  Foreground="Gray" 
                                  FontSize="14"
                                  HorizontalAlignment="Center"
                                  Margin="0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>