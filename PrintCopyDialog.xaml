<Window x:Class="Photobooth.PrintCopyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Print Photos" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#2D2D2D"
        AllowsTransparency="True">
    
    <Border BorderBrush="#555555" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="Print Photos" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                    
                    <!-- Close Button -->
                    <Button x:Name="CloseButton" 
                            Content="âœ•" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Width="45" 
                            Height="45"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <StackPanel Grid.Row="1" Margin="30,20">
                <!-- Preview Image -->
                <Border BorderBrush="#555555" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Height="120"
                        Margin="0,0,0,20">
                    <Image x:Name="PreviewImage" 
                           Stretch="Uniform"
                           Margin="5"/>
                </Border>
                
                <!-- Copy Count Selection -->
                <TextBlock Text="Number of Copies:" 
                           Foreground="White" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Decrease Button -->
                    <Button x:Name="DecreaseButton" 
                            Grid.Column="0"
                            Content="-" 
                            FontSize="36"
                            FontWeight="Bold"
                            Width="80" 
                            Height="80"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#555555"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="DecreaseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Copy Count Display -->
                    <Border Grid.Column="1" 
                            Background="#1E1E1E" 
                            BorderBrush="#555555" 
                            BorderThickness="2"
                            CornerRadius="10"
                            Margin="15,0">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock x:Name="CopyCountText" 
                                       Text="1" 
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="StripCountText" 
                                       Text="(2 strips)" 
                                       FontSize="14"
                                       Foreground="#AAAAAA"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Increase Button -->
                    <Button x:Name="IncreaseButton" 
                            Grid.Column="2"
                            Content="+" 
                            FontSize="36"
                            FontWeight="Bold"
                            Width="80" 
                            Height="80"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#555555"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="IncreaseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
                <!-- Limits Information -->
                <StackPanel Margin="0,10">
                    <TextBlock x:Name="SessionLimitText" 
                               Foreground="#AAAAAA" 
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="EventLimitText" 
                               Foreground="#AAAAAA" 
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>
                    <TextBlock x:Name="WarningText" 
                               Foreground="#FF6B6B" 
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Cancel Button -->
                <Button x:Name="CancelButton" 
                        Grid.Column="0"
                        Content="CANCEL" 
                        Height="70"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="#3A3A3A"
                        Foreground="White"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Print Button -->
                <Button x:Name="PrintButton" 
                        Grid.Column="2"
                        Content="PRINT" 
                        Height="70"
                        FontSize="24"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#45a049"
                        BorderThickness="1"
                        Click="PrintButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>