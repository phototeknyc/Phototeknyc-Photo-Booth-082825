<Window x:Class="Photobooth.PhotoBoothWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:navBtn="clr-namespace:Photobooth.Resources.Controls"
        mc:Ignorable="d"
        Title="PhotoBoothWindow" Background="#333333" WindowState="Maximized" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="True" MinWidth="1200" MinHeight="720" Icon="images/photobooth.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <!--Top Navigation Bar-->
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"  BorderBrush="#CCCCCC" BorderThickness="0,0.5,0,0.5" Padding="5,1,1,1" >
            <StackPanel  Orientation="Horizontal">
                <Menu ItemContainerStyle="{DynamicResource MenuItemContainerStyle1}" x:Name="menu" Margin="3,5,3,5"  Background="{x:Null}">
                    <MenuItem Header="File" Click="MenuItem_Click">
                        <MenuItem Header="Open" Click="MenuItem_Click_1" />
                        <MenuItem Header="Save"  />
                        <MenuItem Header="Save As"  />
                        <MenuItem Header="Print" Click="MenuItem_Click_3"  />
                        <MenuItem Header="Export" Click="MenuItem_Click_2"  />
                    </MenuItem>
                    <MenuItem Header="Help">
                        <MenuItem Header="Check for updates" />
                        <MenuItem Header="About"  />
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>

        <!--Left Navigation Bar-->
        <Border Grid.Column="0"  Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="0,0,0.5,0" Background="#222222">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel>
                    <ListBox x:Name="sidebar"  BorderThickness="0" Background="#222222" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" BorderBrush="{x:Null}">
                        <navBtn:NavButton  Label="Templates" Icon="images/78c5e5793d33ebf1c9326314e895a23c1051568f.png" NavLink="Pages/MainPage.xaml" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        <!--<local:NavButton Label="Backgrounds" Icon="images/background.png" NavLink="Pages/Setting.xaml" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                        <navBtn:NavButton Label="Camera" Icon="images/camera.png" NavLink="Pages/Camera.xaml" VerticalAlignment="Center" HorizontalAlignment="Center" /> "
                    </ListBox>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom">
                    <ListBox x:Name="sidebar1"  BorderThickness="0" Background="#222222" SelectionMode="Single" SelectionChanged="sidebar1_SelectionChanged" BorderBrush="{x:Null}"
                >
                        <navBtn:NavButton  Grid.Column="0" Grid.Row="1"  Label="Setting" Icon="images/Settings.png" NavLink="Pages/Setting.xaml"  />
                        <navBtn:NavButton  Grid.Column="0" Grid.Row="1"  Label="Account" Icon="images/Account.png" NavLink="Pages/Camera.xaml"  />
                    </ListBox>
                </StackPanel>
            </Grid>


        </Border>
        <Frame x:Name="frame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
