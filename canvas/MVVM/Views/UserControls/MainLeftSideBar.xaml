<UserControl x:Class="Photobooth.MVVM.Views.UserControls.MainLeftSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.MVVM.Views.UserControls"
             xmlns:navBtn="clr-namespace:Photobooth.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="96">
    <Grid>
        <Border BorderBrush="#CCCCCC" BorderThickness="0,0,0.5,0" Background="#222222">
            <Grid>
                <DockPanel LastChildFill="True">
                     <!--Settings button docked at the bottom--> 
                    <ListBoxItem x:Name="lbiSettings" DockPanel.Dock="Bottom">
                        <navBtn:NavButton Label="Settings" Icon="../../../images/Settings.png" Click="SettingsButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </ListBoxItem>

                    <!-- Main content of the sidebar -->
                    <StackPanel HorizontalAlignment="Center">
                        <ListBox x:Name="sidebar" BorderThickness="0" Background="#222222" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" BorderBrush="{x:Null}" Cursor="Hand">
                            <ListBoxItem x:Name="lbiHome">
                                <navBtn:NavButton Label="Home" Icon="../../../images/Noticeboard.png" Click="HomeButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </ListBoxItem>
                            <ListBoxItem x:Name="lbiDesinger">
                                <navBtn:NavButton Label="Designer" Icon="../../../images/78c5e5793d33ebf1c9326314e895a23c1051568f.png" Click="DesingerButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </ListBoxItem>
                            <ListBoxItem x:Name="lbiCamera">
                                <navBtn:NavButton Label="Camera" Icon="../../../images/camera.png" Click="CameraButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>
