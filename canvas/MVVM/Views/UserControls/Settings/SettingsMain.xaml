<UserControl x:Class="Photobooth.MVVM.Views.UserControls.Settings.SettingsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.MVVM.Views.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <!-- Left Menu Column -->
            <RowDefinition Height="50"/>
            <!-- Content Column -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBox Width="300" Height="30" Padding="5" Background="Transparent" Foreground="{DynamicResource ForegroundBrush}"
                     Text="Search settings" Margin="0,0,5,0"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <!-- Left Menu Column -->
                <ColumnDefinition Width="200"/>
                <!-- Content Column -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="User" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" 
                       FontSize="16" Margin="10"/>
                <TextBlock Text="Commonly Used" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Text Editor" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Workbench" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Window" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Features" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Application" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Security" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
                <TextBlock Text="Extensions" Foreground="{DynamicResource ForegroundBrush}" Margin="10,5,10,0"/>
            </StackPanel>

            <!-- Content Panel -->
            <Grid Grid.Column="1">

                <!-- Settings Content -->
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="Commonly Used" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>

                        <!-- Setting: Auto Save -->
                        <TextBlock Text="Files: Auto Save" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="Controls auto save of editors that have unsaved changes." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="afterDelay" Margin="0,0,0,10" />

                        <!-- Setting: Font Size -->
                        <TextBlock Text="Editor: Font Size" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="Controls the font size in pixels." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <TextBox Text="14" Width="50" Margin="0,0,0,10"/>

                        <!-- Setting: Font Family -->
                        <TextBlock Text="Editor: Font Family" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="Controls the font family." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <TextBox Text="Consolas, 'Courier New', monospace" Margin="0,0,0,10"/>

                        <!-- Setting: Tab Size -->
                        <TextBlock Text="Editor: Tab Size" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="The number of spaces a tab is equal to." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <TextBox Text="4" Width="50" Margin="0,0,0,10"/>

                        <!-- Setting: Render {DynamicResource ForegroundBrush}space -->
                        <TextBlock Text="Editor: Render {DynamicResource ForegroundBrush}space" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="Controls how the editor should render {DynamicResource ForegroundBrush}space characters." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="selection" Margin="0,0,0,10"/>

                        <!-- Setting: Cursor Style -->
                        <TextBlock Text="Editor: Cursor Style" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="Controls the cursor style in insert input mode." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="line" Margin="0,0,0,10"/>

                        <!-- Setting: Multi Cursor Modifier -->
                        <TextBlock Text="Editor: Multi Cursor Modifier" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}" />
                        <TextBlock Text="The modifier to be used to add multiple cursors with the mouse." 
                               Foreground="#BFBFBF" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="alt" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>