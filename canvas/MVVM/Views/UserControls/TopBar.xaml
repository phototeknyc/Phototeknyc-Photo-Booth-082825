<UserControl x:Class="Photobooth.MVVM.Views.UserControls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.MVVM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Padding="5,1,1,1" >
            <StackPanel  Orientation="Horizontal">
                <Menu ItemContainerStyle="{DynamicResource MenuItemContainerStyle1}" x:Name="menu" Margin="3,5,3,5"  Background="{x:Null}">
                    <MenuItem Header="File" Foreground="{DynamicResource ForegroundBrush}" Click="MenuItem_Click">
                        <!--<MenuItem Header="Open" Click="MenuItem_Click_1" />
                        <MenuItem Header="Save"  />
                        <MenuItem Header="Save As"  />
                        <MenuItem Header="Print" Click="MenuItem_Click_3"  />
                        <MenuItem Header="Export" Click="MenuItem_Click_2"  />-->
                    </MenuItem>
                    <MenuItem Header="Help" Foreground="{DynamicResource ForegroundBrush}">
                        <!--<MenuItem Header="Check for updates" />
                        <MenuItem Header="About"  />-->
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
