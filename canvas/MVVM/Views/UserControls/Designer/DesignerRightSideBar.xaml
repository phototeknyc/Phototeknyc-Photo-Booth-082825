<UserControl x:Class="Photobooth.MVVM.Views.UserControls.Designer.DesignerRightSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photobooth.MVVM.Views.UserControls.Designer"
             xmlns:utils="clr-namespace:Photobooth.MVVM.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200" d:Background="#333333">

    <DockPanel LastChildFill="True">
        <!-- Exit button docked at the bottom -->
        <Grid Background="#33FF0000" ToolTip="Close Item Menu" Cursor="Hand" DockPanel.Dock="Bottom" utils:EventToCommandBehavior.Command="{Binding UnSelectAllItems}">
            <Image Source="\images\LogoutRounded.png" Width="25" Height="40" Margin="5" />
        </Grid>

        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="5,0,5,0">
            <StackPanel Orientation="Vertical">
                <!-- Selected Section -->
                <StackPanel Orientation="Vertical" Margin="0,2,0,2">
                    <TextBlock Text="Selected" FontSize="14" Margin="10,5,0,5" Foreground="White"/>
                    <Border BorderThickness="0,0.5,0,0.5" BorderBrush="#CCCCCC" Padding="0,5,0,6">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="image" Cursor="Hand" Source="{Binding SelectedItemsPositionChangeSource}" Width="20" Stretch="UniformToFill" Margin="5" VerticalAlignment="Center" utils:EventToCommandBehavior.Command="{Binding ToggleLockItemsPosition}"/>
                                <StackPanel IsEnabled="{Binding IsEnabledSelectedItemsPositionChange}" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="X:" FontSize="12" Foreground="White" Margin="1,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="2" Margin="1,5,5,5">
                                        <TextBox x:Name="tbRatioX" Text="{Binding ListenerItem.Left}" Width="50" Height="20" VerticalAlignment="Center" Background="#242424" Foreground="White" BorderBrush="{x:Null}" HorizontalAlignment="Center" KeyDown="tbEnter_KeyDown"/>
                                    </Border>
                                    <TextBlock Text="Y:" FontSize="12" Foreground="White" Margin="1,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="2" Margin="1,5,5,5">
                                        <TextBox x:Name="tbRatioY" Width="50" Height="20" VerticalAlignment="Center" Background="#242424" Foreground="White" Text="{Binding ListenerItem.Top}" BorderBrush="{x:Null}" KeyDown="tbEnter_KeyDown"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4,0,0">
                                <Image x:Name="image8" Cursor="Hand"  Source="{Binding SelectedItemsSizeChangeSource}" Width="20" Stretch="UniformToFill" Margin="5" VerticalAlignment="Center" utils:EventToCommandBehavior.Command="{Binding ToggleLockItemsSize}"/>
                                <StackPanel IsEnabled="{Binding IsEnabledSelectedItemsSizeChange}" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="W:" FontSize="12" Foreground="White" Margin="0,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="2" Margin="0,5,5,5">
                                        <TextBox x:Name="tbSizeX" Width="50" Height="20" VerticalAlignment="Center" Background="#242424" Foreground="White" Text="{Binding ListenerItem.Width}" BorderBrush="{x:Null}" HorizontalAlignment="Center" KeyDown="tbEnter_KeyDown"/>
                                    </Border>
                                    <TextBlock Text="H:" FontSize="12" Foreground="White" Margin="0,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="2" Margin="0,5,5,5">
                                        <TextBox x:Name="tbSizeY" Width="50" Height="20" VerticalAlignment="Center" Background="#242424" Foreground="White" Text="{Binding ListenerItem.Height}" BorderBrush="{x:Null}" KeyDown="tbEnter_KeyDown"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Alignments Section -->
                <StackPanel Orientation="Vertical" Margin="0,2,0,2">
                    <TextBlock Text="Alignments" FontSize="14" Margin="10,5,0,5" Foreground="White"/>
                    <Border BorderThickness="0,0.5,0,0.5" BorderBrush="#CCCCCC" Padding="0,5,0,6">
                        <Grid Width="200" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image ToolTip="Align Left" Grid.Row="0" Cursor="Hand" Grid.Column="0" Source="\images\alignLeft.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignLeft}"/>
                            <Image ToolTip="Align Horizontally Center" Grid.Row="0" Cursor="Hand" Grid.Column="1" Source="\images\alignCenter.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignHorizontallyCenter}"/>
                            <Image ToolTip="Algin Right" Grid.Row="0" Cursor="Hand" Grid.Column="2" Source="\images\alignRight.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignRight}"/>
                            <Image ToolTip="Align Stretch Horizontal" Grid.Row="0" Cursor="Hand" Grid.Column="3" Source="\images\alignStretchHorizontal.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignStretchHorizontal}"/>
                            <Image ToolTip="Align Top" Grid.Row="1" Cursor="Hand" Grid.Column="0" Source="\images\alignTop.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignTop}"/>
                            <Image ToolTip="Align Vertically Center" Grid.Row="1" Cursor="Hand" Grid.Column="1" Source="\images\alignBaseLine.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignVerticallyCenter}"/>
                            <Image ToolTip="Align Bottom" Grid.Row="1" Cursor="Hand" Grid.Column="2" Source="\images\alignBottom.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignBottom}"/>
                            <Image ToolTip="Align Stretch Vertical" Grid.Row="1" Cursor="Hand" Grid.Column="3" Source="\images\alignStretchVertical.png" Width="25" Height="40" Margin="5" utils:EventToCommandBehavior.Command="{Binding AlignStretchVertical}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Z-Order Section -->
                <StackPanel Orientation="Vertical" Margin="0,2,0,2">
                    <TextBlock Text="Others" FontSize="14" Margin="10,5,0,5" Foreground="White"/>
                    <Border BorderThickness="0,0.5,0,0.5" BorderBrush="#CCCCCC" Padding="0,5,0,6">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image ToolTip="Bring To Front" Cursor="Hand" Source="\images\bringToFront.png" Width="25" Height="40" utils:EventToCommandBehavior.Command="{Binding BringToTheFront}"/>
                            <Image ToolTip="Send To Back" Cursor="Hand" Grid.Column="1" Source="\images\sendToBack.png" Width="25" Height="40" utils:EventToCommandBehavior.Command="{Binding SendToTheBack}"/>
                            <Image ToolTip="Duplicate" Cursor="Hand" Grid.Column="2" Source="\images\duplicate.png" Width="25" Height="40" utils:EventToCommandBehavior.Command="{Binding DuplicateSelected}"/>
                            <Image ToolTip="Change Orientation" Cursor="Hand" Grid.Column="3" Source="\images\ChangeOrientation.png" Width="25" Height="40" utils:EventToCommandBehavior.Command="{Binding ChangeSelectedItemsOrientation}"/>
                            <Image ToolTip="Set image to canvas" Cursor="Hand" Grid.Row="1" Source="\images\SetBackground.png" Width="25" Height="40" utils:EventToCommandBehavior.Command="{Binding SetImageToCanvas}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--Position the grid at the bottom of the stack panel-->
            </StackPanel>
        </ScrollViewer>
    </DockPanel>

</UserControl>
