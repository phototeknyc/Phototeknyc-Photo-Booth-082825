<Window x:Class="Photobooth.MVVM.Views.Windows.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photobooth.MVVM.Views.Windows"
        mc:Ignorable="d"
            Title="Message" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer x:Name="MessageScrollViewer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <TextBlock x:Name="MessageTextBlock" Text="Message" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
