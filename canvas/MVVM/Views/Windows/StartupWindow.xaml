<Window x:Class="Photobooth.MVVM.Views.Windows.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photobooth.MVVM.Views.Windows"
        mc:Ignorable="d"
        Title="PhotoBooth" Height="450" Width="800" Icon="../../../images/CameraIcon.png" WindowStartupLocation="CenterScreen">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Photobooth!" FontSize="30" HorizontalAlignment="Center" FontFamily="Copperplate Gothic Bold" Margin="5,0,0,5">
                <TextBlock.Foreground>
                    <RadialGradientBrush>
                        <GradientStop Color="{DynamicResource TextPrimaryColor}" Offset="0"/>
                        <GradientStop Color="{DynamicResource TextSecondaryColor}" Offset="1"/>
                    </RadialGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="132.22"/>
                    <ColumnDefinition Width="167.78"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" Text="Select Session" Foreground="{DynamicResource ForegroundBrush}"/>

                <ComboBox
                    Name="cbxSessions"
                    Width="Auto"
                    Margin="84,0,0,0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    VerticalContentAlignment="Center"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Sessions}"
                    SelectedItem="{Binding CurrentSession}"
                    DisplayMemberPath="Name"
                    Foreground="Black" />

                <Button Grid.Row="1" Grid.Column="1" Content="New Session" Width="150" Height="30" Margin="0,15,0,5" Click="Button_NewSessionClick" Cursor="Hand" BorderThickness="1" Background="Transparent" Foreground="{DynamicResource ForegroundBrush}"/>
                <Button Name="btnStart" IsEnabled="{Binding IsSessionSelected}" Grid.Row="1" Grid.Column="3" Content="Start" Width="150" Height="30" Margin="0,15,0,5" Click="Button_Click" Cursor="Hand" BorderThickness="1" Background="Transparent" Foreground="{DynamicResource ForegroundBrush}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>