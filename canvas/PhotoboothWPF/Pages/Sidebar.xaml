<Page x:Class="PhotoboothWPF.Pages.SideNavbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoboothWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200" Background="#333333"
      Title="SideNavbar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Row="0" Grid.Column="0"  VerticalScrollBarVisibility="Auto" >
            <StackPanel x:Name="stackPanel" VerticalAlignment="Top"  Orientation="Vertical"  >
                <!--Add Items Section-->
                <Expander Header="Add" Foreground="White" FontSize="16" FontWeight="Bold" UseLayoutRounding="True" IsExpanded="True">
                    <ListView x:Name="ToolBoxList" BorderThickness="0,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Background="#333333" Padding="0,5">
                        <ListViewItem VerticalAlignment="Center" Cursor="Hand" PreviewMouseLeftButtonDown="ActionCaptureImage">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="image4" Source="https://img.icons8.com/ios/50/FFFFFF/camera--v4.png" Width="20" Stretch="UniformToFill" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                <TextBlock Text="Photo From Booth" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center"  />
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem BorderThickness="0,0.5" VerticalAlignment="Center" Cursor="Hand" PreviewMouseLeftButtonUp="ActionImportImage">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="image5" Source="https://img.icons8.com/external-kmg-design-basic-outline-kmg-design/32/FFFFFF/external-photo-interface-essentials-kmg-design-basic-outline-kmg-design.png" Width="20" Stretch="UniformToFill" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                <TextBlock Text="Image" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center"  />
                            </StackPanel>
                        </ListViewItem>
                        <!--<ListViewItem VerticalAlignment="Center" Cursor="Hand" PreviewMouseLeftButtonUp="ActionAddText">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="image6" Source="https://img.icons8.com/external-prettycons-lineal-prettycons/49/FFFFFF/external-text-text-formatting-prettycons-lineal-prettycons.png" Width="20" Stretch="UniformToFill" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                <TextBlock Text="Text" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center"  />
                            </StackPanel>
                        </ListViewItem>-->
                        
                    </ListView>

                </Expander>
                <!--<TextBlock Text="Add" FontSize="16" Margin="10,5,0,5" FontWeight="Bold" Foreground="White" />-->
                <Border  BorderThickness="0,0.5" HorizontalAlignment="Left" BorderBrush="#CCCCCC"  VerticalAlignment="Top" Width="200"  Padding="0,5">
                    <Expander Header="Layout" FontSize="16" Foreground="White"  FontWeight="Bold" UseLayoutRounding="True" IsExpanded="True">
                    <!--Layout Section-->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                            <ListViewItem BorderThickness="0,0.5" VerticalAlignment="Center" Cursor="Hand" PreviewMouseLeftButtonUp="ActionClearCanvas">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image  Source="/images/clear.png" Width="20" Stretch="UniformToFill" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                    <TextBlock Text="Clear Canvas" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                </StackPanel>
                            </ListViewItem> 
                            <ListViewItem BorderThickness="0,0.5" VerticalAlignment="Center" Cursor="Hand" PreviewMouseLeftButtonUp="ActionChangeOrientation">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image  Source="/images/orientation.png" Width="20" Stretch="UniformToFill" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                    <TextBlock Text="Change Orientation" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center"  />
                                </StackPanel>
                            </ListViewItem>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock Text="Aspect Ratio" FontSize="12" Foreground="White" Margin="5,5,5,5" VerticalAlignment="Center" FontWeight="Normal"  />
                                <ComboBox ItemContainerStyle="{DynamicResource ComboBoxItemContainerStyle1}" FontSize="12" x:Name="comboBox" Width="180" Height="25"  Margin="5,5,5,5" VerticalAlignment="Center" FontWeight="Normal" SelectionChanged="comboBox_SelectionChanged"     >
                                    <ComboBoxItem Content="2x6" />
                                    <ComboBoxItem Content="4x6" />
                                    <ComboBoxItem Content="5x7" />
                                    <ComboBoxItem Content="8x10" />
                                </ComboBox>
                            </StackPanel>

                        </StackPanel>
                   
                </Expander>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
