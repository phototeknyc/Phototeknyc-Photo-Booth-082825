<Page x:Class="Photobooth.Pages.CameraSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photobooth.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource SurfaceBackgroundBrush}"
      Title="Camera Settings">

    <Page.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceSecondaryBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Setting Button Style -->
        <Style x:Key="SettingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfacePanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfacePrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="SettingComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfacePanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Modern Toggle Button Style -->
        <Style x:Key="ModernToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource SurfacePanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfacePrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Prominent Test Capture Button Style -->
        <Style x:Key="TestCaptureButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FF45A049"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF66BB6A"/>
                                <Setter Property="BorderBrush" Value="#FF4CAF50"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF45A049"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF757575"/>
                                <Setter Property="BorderBrush" Value="#FF616161"/>
                                <Setter Property="Foreground" Value="#FFCCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <TabControl Background="{StaticResource SurfaceBackgroundBrush}" 
                BorderBrush="{StaticResource SurfaceBorderBrush}"
                Margin="10"
                SelectionChanged="TabControl_SelectionChanged">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="Border" 
                                    Background="{StaticResource SurfacePanelBrush}" 
                                    BorderBrush="{StaticResource SurfaceBorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="5,5,0,0"
                                    Margin="0,0,2,0"
                                    Padding="15,8">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfacePrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource SurfaceTextPrimaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter Property="Foreground" Value="{StaticResource SurfaceTextSecondaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </TabControl.Resources>
        
        <!-- Photo Settings Tab -->
        <TabItem Header="📷 Photo Settings">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Settings -->
                <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel>
                <!-- Header -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Camera Settings" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="cameraStatusText" 
                                   Text="Connecting to camera..." 
                                   FontSize="14" 
                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                   HorizontalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Prominent Test Capture -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <Button x:Name="testCaptureButton"
                                Content="📸 TEST CAPTURE" 
                                Style="{StaticResource TestCaptureButtonStyle}" 
                                Padding="25,20"
                                FontSize="20"
                                FontWeight="Bold"
                                Click="TestCapture_Click"
                                HorizontalAlignment="Stretch"/>
                        
                        <TextBlock x:Name="testStatusText" 
                                   Text="Click to test current settings" 
                                   FontSize="14" 
                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <CheckBox x:Name="autoPreviewCheckBox" 
                                      IsChecked="False" 
                                      Foreground="{StaticResource SurfaceTextPrimaryBrush}"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Auto Preview (capture when settings change)" 
                                       Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Basic Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Basic Settings" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                   Margin="0,0,0,10"/>
                        
                        <!-- ISO -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="ISO" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="isoPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="IsoPrev_Click"/>
                                <TextBlock x:Name="isoValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="isoNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="IsoNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Aperture -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Aperture (f/)" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="aperturePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="AperturePrev_Click"/>
                                <TextBlock x:Name="apertureValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="apertureNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="ApertureNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Shutter Speed -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Shutter Speed" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="shutterPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="ShutterPrev_Click"/>
                                <TextBlock x:Name="shutterValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="shutterNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="ShutterNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- White Balance -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="White Balance" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="wbPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="WhiteBalancePrev_Click"/>
                                <TextBlock x:Name="wbValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="wbNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="WhiteBalanceNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Focus Mode -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Focus Mode" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="focusPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="FocusPrev_Click"/>
                                <TextBlock x:Name="focusValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="focusNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="FocusNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Exposure Compensation -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Exposure Compensation" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="exposurePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="ExposurePrev_Click"/>
                                <TextBlock x:Name="exposureValueText" Text="0" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="exposureNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="ExposureNext_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Advanced Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Advanced Settings" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                   Margin="0,0,0,10"/>
                        
                        <!-- Camera Mode -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Camera Mode" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="modePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="ModePrev_Click"/>
                                <TextBlock x:Name="modeValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="modeNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="ModeNext_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Image Quality -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Image Quality" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="qualityPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" Click="QualityPrev_Click"/>
                                <TextBlock x:Name="qualityValueText" Text="RAW+JPEG" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                <Button x:Name="qualityNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" Click="QualityNext_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>


                <!-- Action Buttons -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <Button Content="Refresh Settings" 
                                Style="{StaticResource SettingButtonStyle}" 
                                Padding="15,10"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,10"
                                Click="RefreshSettings_Click"/>
                        <Button Content="Reset to Auto" 
                                Style="{StaticResource SettingButtonStyle}" 
                                Padding="15,10"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                Click="ResetToAuto_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Column - Large Preview -->
        <Border Grid.Column="1" Style="{StaticResource SettingsCardStyle}" Margin="10,0,0,0">
            <Grid>
                <!-- Header -->
                <TextBlock Text="Live Preview" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,0,0,20"/>

                <!-- Preview Area -->
                <Border Background="{StaticResource SurfacePrimaryBrush}" 
                        CornerRadius="10" 
                        Margin="0,50,0,0">
                    <Grid>
                        <!-- Placeholder -->
                        <StackPanel x:Name="imagePlaceholder" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="📷" 
                                       FontSize="120" 
                                       Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Test image will appear here" 
                                       FontSize="20" 
                                       Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Click 'Test Capture' to see results with current settings" 
                                       FontSize="14" 
                                       Foreground="{StaticResource SurfaceTextTertiaryBrush}" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="20,10,20,0"/>
                        </StackPanel>
                        
                        <!-- Test Image -->
                        <Image x:Name="testImage" 
                               Stretch="Uniform" 
                               Visibility="Collapsed"
                               Margin="20"/>
                        
                        <!-- Image Info Overlay -->
                        <Border Background="#CC000000" 
                                CornerRadius="8"
                                Padding="15"
                                VerticalAlignment="Bottom" 
                                HorizontalAlignment="Right" 
                                Margin="30"
                                x:Name="imageInfoPanel"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock x:Name="captureTimeText" 
                                           Text="" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           FontSize="14"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="imageSettingsText" 
                                           Text="" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           FontSize="13"
                                           Margin="0,5,0,0"/>
                                <TextBlock x:Name="imageSizeText" 
                                           Text="" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           FontSize="12"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
        </TabItem>
        
        <!-- Video Settings Tab -->
        <TabItem Header="🎥 Video Settings">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Video Settings -->
                <ScrollViewer Grid.Column="0" Margin="0,0,10,0">
                    <StackPanel>
                        <!-- Header -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Video Recording Settings" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Configure video recording parameters" 
                                           FontSize="14" 
                                           Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                           HorizontalAlignment="Center" 
                                           TextWrapping="Wrap"
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Video Mode Camera Settings -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Video Mode Camera Settings" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- ISO for Video -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="ISO" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoIsoPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoIsoValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoIsoNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Aperture for Video -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Aperture (f/)" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoAperturePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoApertureValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoApertureNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Shutter Speed for Video -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Shutter Speed" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoShutterPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoShutterValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoShutterNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- White Balance for Video -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="White Balance" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoWbPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoWbValueText" Text="Auto" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoWbNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Focus Mode for Video -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Focus Mode" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoFocusPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoFocusValueText" Text="Continuous AF" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoFocusNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Exposure Compensation for Video -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Exposure Compensation" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoExposurePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoExposureValueText" Text="0" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoExposureNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Video Format Settings -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Video Format Settings" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Frame Rate -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Frame Rate" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoFrameRatePrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoFrameRateValueText" Text="30 fps" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoFrameRateNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Video Quality/Codec -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Video Quality" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="videoQualityPrevButton" Content="◀" Style="{StaticResource SettingButtonStyle}" />
                                        <TextBlock x:Name="videoQualityValueText" Text="High (ALL-I)" Foreground="{StaticResource SurfaceTextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100" TextAlignment="Center" FontSize="14"/>
                                        <Button x:Name="videoQualityNextButton" Content="▶" Style="{StaticResource SettingButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Boomerang Settings -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Boomerang Settings" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Boomerang Duration -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Boomerang Duration" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="boomerangDurationSlider" 
                                                Grid.Column="0"
                                                Minimum="1" 
                                                Maximum="5" 
                                                Value="3"
                                                TickFrequency="0.5"
                                                IsSnapToTickEnabled="True"/>
                                        <TextBlock x:Name="boomerangDurationText" 
                                                   Grid.Column="1"
                                                   Text="3s" 
                                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Loop Count -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Loop Count" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="boomerangLoopCombo" Style="{StaticResource SettingComboBoxStyle}">
                                        <ComboBoxItem Content="1 (Forward only)"/>
                                        <ComboBoxItem Content="2 (Forward + Reverse)" IsSelected="True"/>
                                        <ComboBoxItem Content="3 (Forward + Reverse + Forward)"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Border Style="{StaticResource SettingsCardStyle}">
                            <StackPanel>
                                <Button x:Name="testVideoButton"
                                        Content="🎬 TEST VIDEO RECORDING" 
                                        Style="{StaticResource TestCaptureButtonStyle}" 
                                        Padding="20,15"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,10"/>
                                
                                <Button x:Name="saveVideoSettingsButton"
                                        Content="Save Video Settings" 
                                        Style="{StaticResource SettingButtonStyle}" 
                                        Padding="15,10"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,10"/>
                                
                                <Button x:Name="resetVideoSettingsButton"
                                        Content="Reset to Defaults" 
                                        Style="{StaticResource SettingButtonStyle}" 
                                        Padding="15,10"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right Column - Video Preview -->
                <Border Grid.Column="1" Style="{StaticResource SettingsCardStyle}" Margin="10,0,0,0">
                    <Grid>
                        <!-- Header -->
                        <TextBlock Text="Video Preview" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Margin="0,0,0,20"/>

                        <!-- Live View Area -->
                        <Border Background="{StaticResource SurfacePrimaryBrush}" 
                                CornerRadius="10" 
                                Margin="0,50,0,0">
                            <Grid>
                                <!-- Live View Image -->
                                <Image x:Name="videoLiveViewImage" 
                                       Stretch="Uniform"
                                       Margin="10"/>
                                
                                <!-- Placeholder when live view is not active -->
                                <StackPanel x:Name="videoPlaceholder" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Visibility="Visible">
                                    <TextBlock Text="📷" 
                                               FontSize="120" 
                                               Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Live View" 
                                               FontSize="20" 
                                               Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                               HorizontalAlignment="Center"
                                               Margin="0,20,0,0"/>
                                    <TextBlock Text="Camera preview with video settings applied" 
                                               FontSize="14" 
                                               Foreground="{StaticResource SurfaceTextTertiaryBrush}" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Margin="20,10,20,0"/>
                                </StackPanel>
                                
                                <!-- Live View Controls -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Bottom" 
                                            Margin="0,0,0,30">
                                    <ToggleButton x:Name="liveViewToggleButton" 
                                                  Content="📷 Start Live View" 
                                                  Style="{StaticResource ModernToggleButtonStyle}" 
                                                  Margin="5"
                                                  Checked="LiveViewToggle_Checked"
                                                  Unchecked="LiveViewToggle_Unchecked"/>
                                </StackPanel>
                                
                                <!-- Live View Info Overlay -->
                                <Border Background="#CC000000" 
                                        CornerRadius="8"
                                        Padding="10"
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Right" 
                                        Margin="20"
                                        x:Name="liveViewInfoPanel"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="🔴 LIVE" 
                                                   Foreground="Red" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                        <TextBlock x:Name="videoSettingsLiveText" 
                                                   Text="" 
                                                   Foreground="{StaticResource SurfaceTextPrimaryBrush}" 
                                                   FontSize="12"
                                                   Margin="0,5,0,0"/>
                                        <Separator Margin="0,5,0,5" Background="#666"/>
                                        <TextBlock Text="Keyboard Shortcuts:" 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="10"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="I+↑↓: ISO" 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="9"/>
                                        <TextBlock Text="A+↑↓: Aperture" 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="9"/>
                                        <TextBlock Text="S+↑↓: Shutter" 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="9"/>
                                        <TextBlock Text="E+↑↓: Exp.Comp" 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="9"/>
                                        <TextBlock Text="W+↑↓: White Bal." 
                                                   Foreground="{StaticResource SurfaceTextSecondaryBrush}" 
                                                   FontSize="9"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Page>