<Page x:Class="Photobooth.Pages.Camera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photobooth.Pages"
      mc:Ignorable="d" 
      MinWidth="1200" MinHeight="800" Background="{StaticResource SurfaceBackgroundBrush}"
      Title="Camera">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.Row="0" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness=".5">
                    <StackPanel >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                            <ComboBox x:Name="cmb_cameras" VerticalAlignment="Center" Width="262" Height="30">
                                <ComboBoxItem Content="Select Camera" IsSelected="True"/>
                                <ComboBoxItem Content="Camera 1"/>
                                <ComboBoxItem Content="Camera 2"/>
                                <ComboBoxItem Content="Camera 3"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" >
                            <Button x:Name="btnCapture" Content="Connect to Sony Camera" Width="262" Height="30" Margin="10" />
                            <Button x:Name="btnSave" Content="Connect to Nikon Wifi" Width="262" Height="30" Margin="10"/>
                        </StackPanel>
                        <Border CornerRadius="10"  BorderThickness="1" BorderBrush="{StaticResource SurfaceBorderBrush}" Height="248" Width="262" Margin="0,30,0,0">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock  Text="Control" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="{StaticResource SurfaceTextPrimaryBrush}" Background="{StaticResource SurfaceBackgroundBrush}" Margin="9,-17,0,0" Width="69" />
                                <StackPanel Orientation="Vertical" Height="190" Margin="0,37,0,0" HorizontalAlignment="Center" Width="262">
                                    <Button Content="Capture" Width="114" Height="30" Margin="10" Click="btn_capture_Click" />
                                    <Button x:Name="btn_liveview"  Content="Live View" Width="114" Height="30" Margin="10"/>
                                    <Button Content="Start" Width="114" Height="30" Margin="10" Click="startButton_clicked" />
                                    <Button Content="Stop" Width="114" Height="30" Margin="10" Click="stopButton_Clicked"  />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <ComboBox Width="262" Margin="0,37,0,0" Height="30">
                            <ComboBoxItem Content="Focus Mode" IsSelected="True"/>
                            <ComboBoxItem Content="Manual"/>
                            <ComboBoxItem Content="Auto"/>
                        </ComboBox>
                        <ComboBox Width="262" Margin="0,5,0,0" Height="30">
                            <ComboBoxItem Content="Shutter Speed" IsSelected="True"/>
                            <ComboBoxItem Content="1/100"/>
                            <ComboBoxItem Content="1/500"/>
                            <ComboBoxItem Content="1/250"/>
                            <ComboBoxItem Content="1/125"/>
                            <ComboBoxItem Content="1/60"/>
                            <ComboBoxItem Content="1/30"/>
                            <ComboBoxItem Content="1/15"/>
                            <ComboBoxItem Content="1/8"/>
                            <ComboBoxItem Content="1/4"/>
                            <ComboBoxItem Content="1/2"/>
                            <ComboBoxItem Content="1/1"/>
                        </ComboBox>
                        <ComboBox Width="262" Margin="0,5,0,0" Height="30">
                            <ComboBoxItem Content="White Balance" IsSelected="True"/>
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content=""/>
                        </ComboBox>
                    </StackPanel>
                </Border>
                <Image x:Name="imgCamera" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" Margin="0,0,0,0"/>
            </Grid>
            <Image x:Name="img_photo" Height="696" Width="917"/>
        </StackPanel>
        <Border Grid.Column="0" Grid.Row="1" CornerRadius="10" Background="{StaticResource SurfacePanelBrush}" BorderThickness="0" Padding="3"  Margin="5">
            <RichTextBox x:Name="textBoxLogs" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="200" MinWidth="1200"  IsReadOnly="True" BorderThickness="0" FontSize="20" FontFamily="Segoe UI" Padding="20,0,0,0" Background="{StaticResource SurfacePanelBrush}" SelectionTextBrush="{StaticResource SurfaceTextPrimaryBrush}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Connection Device Started" Foreground="{StaticResource SurfaceTextPrimaryBrush}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>

        <!-- Diagnostics badge + panel -->
        <ToggleButton x:Name="DiagToggle" Content="Diagnostics" Width="130" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Grid.Row="0" Grid.Column="0"/>
        <Border x:Name="DiagPanel" Grid.Row="0" Grid.Column="0" CornerRadius="8" Background="#CC1E1E1E" BorderBrush="#444" BorderThickness="1" Padding="12" Margin="10,50,10,10" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Sony SDK Diagnostics" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="DiagSdkVersion" Foreground="#DDD"/>
                <TextBlock x:Name="DiagConnection" Foreground="#DDD"/>
                <TextBlock x:Name="DiagPcRemote" Foreground="#DDD"/>
                <TextBlock x:Name="DiagLiveView" Foreground="#DDD"/>
                <TextBlock x:Name="DiagRecording" Foreground="#DDD"/>
                <TextBlock x:Name="DiagBattery" Foreground="#DDD"/>
                <TextBlock x:Name="DiagLastError" Foreground="#F88"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
