                                                            </Setter>
                                                            <Setter TargetName="border" Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="#9F7AEA" 
                                                                                    BlurRadius="20" 
                                                                                    ShadowDepth="0" 
                                                                                    Opacity="0.5"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="border" Property="Background">
                                                                <Setter.Value>
                                                                    <SolidColorBrush Color="#4A5568"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Foreground" Value="#718096"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
                </StackPanel>
            </Expander>
            
            <!-- Debug & Logging Settings -->
            <Expander Header="Debug &amp; Logging" IsExpanded="False" Style="{StaticResource SettingsExpanderStyle}">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🐛" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <StackPanel Margin="20,15,20,20">
                    
                    <!-- Debug Logging Toggle -->
                    <Border Style="{StaticResource SettingBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="Enable Debug Logging" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="White" 
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Enable detailed debug logging for troubleshooting. Debug messages appear in Visual Studio Debug Output window and logging tools."
                                       FontSize="12"
                                       Foreground="#B0B0B0"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="{Binding ElementName=DebugLoggingToggle, Path=IsChecked, Converter={StaticResource BoolToEnableText}}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Foreground="#4CAF50"/>
                                
                                <CheckBox x:Name="DebugLoggingToggle"
                                          Grid.Column="1"
                                          Style="{StaticResource ModernToggleStyle}"
                                          Checked="DebugLoggingToggle_Checked"
                                          Unchecked="DebugLoggingToggle_Unchecked"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Debug Information -->
                    <Border Style="{StaticResource InfoBorderStyle}" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="Debug Output Locations" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#4CAF50" 
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock FontSize="12" 
                                       Foreground="#B0B0B0" 
                                       TextWrapping="Wrap">
                                <Run Text="When debug logging is enabled, messages appear in:"/>
                                <LineBreak/>
                                <Run Text="• Visual Studio Debug Output window"/>
                                <LineBreak/>
                                <Run Text="• Debug console applications"/>
                                <LineBreak/>
                                <Run Text="• External logging tools and frameworks"/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="Debug categories include: UI operations, camera operations, queue status, gallery actions, sharing operations, and session management."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Debug Status -->
                    <Border Style="{StaticResource InfoBorderStyle}" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="Current Debug Status" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#4CAF50" 
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock x:Name="DebugStatusText"
                                       FontSize="12" 
                                       Foreground="#B0B0B0"
                                       Text="Debug logging is currently disabled"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </Expander>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,40">
                <Button Content="Save Settings" 
                        Click="SaveSettings_Click"
                        Style="{StaticResource SaveButtonStyle}"/>
                
                <Button Content="Reset to Defaults" 
                        Click="ResetSettings_Click"
                        Style="{StaticResource ResetButtonStyle}"/>
                
                <Button Content="Open Photobooth" 
                        Click="OpenPhotobooth_Click"
                        Style="{StaticResource OpenButtonStyle}"/>
            </StackPanel>
            
            <!-- Capture Modes Section -->
            <Border Style="{StaticResource GlassBorderStyle}" 
                    Margin="0,30,0,30" Background="{StaticResource SurfaceBrush}">
                <StackPanel Margin="30">
                    <TextBlock Text="Capture Modes" 
                               Style="{StaticResource SurfaceTextPrimaryStyle}"
                               FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
                    
                    <!-- Enable Capture Modes -->
                    <CheckBox x:Name="EnableCaptureModesCheckBox"
                              Style="{StaticResource ModernSwitchStyle}"
                              IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModesEnabled}"
                              Margin="0,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Enable Multiple Capture Modes" 
                                       Style="{StaticResource SurfaceTextPrimaryStyle}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="(Allow users to select different capture types)" 
                                       Style="{StaticResource SurfaceTextSecondaryStyle}"
                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </CheckBox>

                    <!-- Individual Mode Settings -->
                    <Grid Margin="30,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Photo Mode -->
                        <CheckBox Grid.Row="0" Grid.Column="0"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModePhoto}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="Photo" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- Video Mode -->
                        <CheckBox Grid.Row="0" Grid.Column="1"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeVideo}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="Video" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- Boomerang Mode -->
                        <CheckBox Grid.Row="1" Grid.Column="0"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeBoomerang}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="Boomerang" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- GIF Mode -->
                        <CheckBox Grid.Row="1" Grid.Column="1"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeGif}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="GIF" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- Green Screen Mode -->
                        <CheckBox Grid.Row="2" Grid.Column="0"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeGreenScreen}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="Green Screen" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- AI Mode -->
                        <CheckBox Grid.Row="2" Grid.Column="1"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeAI}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="AI Photo" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>

                        <!-- Flipbook Mode -->
                        <CheckBox Grid.Row="3" Grid.Column="0"
                                  Style="{StaticResource ModernSwitchStyle}"
                                  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=CaptureModeFlipbook}"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  Margin="0,5">
                            <TextBlock Text="Flipbook" Style="{StaticResource SurfaceTextPrimaryStyle}"/>
                        </CheckBox>
                    </Grid>

                    <!-- Default Mode Selection -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Default Capture Mode:" 
                                   Style="{StaticResource SurfaceTextPrimaryStyle}"
                                   Margin="0,0,0,10"/>
                        <ComboBox x:Name="DefaultCaptureModeCombo"
                                  Width="200" HorizontalAlignment="Left"
                                  IsEnabled="{Binding ElementName=EnableCaptureModesCheckBox, Path=IsChecked}"
                                  SelectionChanged="DefaultCaptureModeCombo_SelectionChanged">
                            <ComboBoxItem Content="Photo"/>
                            <ComboBoxItem Content="Video"/>
                            <ComboBoxItem Content="Boomerang"/>
                            <ComboBoxItem Content="Gif"/>
                            <ComboBoxItem Content="GreenScreen"/>
                            <ComboBoxItem Content="AI"/>
                            <ComboBoxItem Content="Flipbook"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>