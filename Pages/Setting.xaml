<Page x:Class="Photobooth.Pages.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Photobooth.Pages"
      xmlns:nav="clr-namespace:Photobooth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
Background="{StaticResource SurfaceBackgroundBrush}">
    <Grid>
        <!--create a menu bar at side which shows background to change-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
           
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="{StaticResource SurfaceBorderBrush}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="0,0,0,0.5">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Setting" FontSize="30" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="{StaticResource SurfaceBorderBrush}" Grid.Column="0" Grid.Row="1" BorderThickness="0,0,0.5,0">
            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Left"  Orientation="Vertical"  >
                    <Expander Header="Style" IsExpanded="True" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontSize="16">
                        <ListBox x:Name="styleMenu" SelectionMode="Single" Background="{x:Null}" BorderThickness="0" Width="155" Foreground="{StaticResource SurfaceTextPrimaryBrush}" Margin="30,0,0,0" SelectionChanged="ListBox_SelectionChanged">
                            <nav:NavButton Label="Background" NavLink="Pages/BackgroundSettingControl.xaml"/>
                        </ListBox>

                    </Expander>
                    <Expander Header="Photobooth" IsExpanded="False" Foreground="{StaticResource SurfaceTextPrimaryBrush}" FontSize="16">
                        <ListBox x:Name="photoboothMenu" SelectionMode="Single" Background="{x:Null}" BorderThickness="0" Width="155" Foreground="{StaticResource SurfaceTextPrimaryBrush}" Margin="30,0,0,0" SelectionChanged="ListBox_SelectionChanged">
                            <nav:NavButton Label="Touch Interface" NavLink="Pages/PhotoboothSettingsControl.xaml"/>
                        </ListBox>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Frame Grid.Row="1" Grid.Column="1" x:Name="frame" NavigationUIVisibility="Hidden"/>


    </Grid>
</Page>
