<Window x:Class="Photobooth.PrinterAlignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Printer Alignment" 
        Height="750" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#2D2D2D"
        AllowsTransparency="True">
    
    <Border BorderBrush="#555555" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock Text="Printer Alignment &amp; Calibration" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                    
                    <!-- Close Button -->
                    <Button x:Name="CloseButton" 
                            Content="âœ•" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Width="45" 
                            Height="45"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Printer Selection Tabs -->
                <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" 
                                                Background="#3A3A3A" 
                                                BorderBrush="#555555" 
                                                BorderThickness="1,1,1,0" 
                                                CornerRadius="5,5,0,0"
                                                Margin="2,0">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="15,10"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Default Printer Tab -->
                    <TabItem Header="Default Printer (4x6)">
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Controls Section -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            
                            <!-- Printer Name Display -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Selected Printer:" Foreground="#AAAAAA" FontSize="14"/>
                                <TextBlock x:Name="DefaultPrinterName" Text="Not Selected" Foreground="White" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <!-- Scale Adjustments -->
                            <GroupBox Grid.Row="1" Header="Size Adjustment (Aspect Ratio Locked)" Foreground="White" BorderBrush="#555555" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Size Scale -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Scale:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="DefaultScaleMinus" Grid.Column="0" Content="-" FontSize="24" Height="50" Click="DefaultScaleMinus_Click"/>
                                        <Slider x:Name="DefaultScaleSlider" Grid.Column="2" 
                                                Minimum="0.8" Maximum="1.2" Value="1.0" 
                                                TickFrequency="0.01" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="DefaultScaleSlider_ValueChanged"/>
                                        <Button x:Name="DefaultScalePlus" Grid.Column="4" Content="+" FontSize="24" Height="50" Click="DefaultScalePlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="DefaultScaleValue" Grid.Row="0" Grid.Column="2" 
                                               Text="100%" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                </Grid>
                            </GroupBox>
                            
                            <!-- Position Adjustments -->
                            <GroupBox Grid.Row="2" Header="Position Adjustment (pixels)" Foreground="White" BorderBrush="#555555" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"/>
                                        <RowDefinition Height="60"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Horizontal Offset -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Horizontal:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="DefaultXMinus" Grid.Column="0" Content="â—„" FontSize="20" Height="50" Click="DefaultXMinus_Click"/>
                                        <Slider x:Name="DefaultXSlider" Grid.Column="2" 
                                                Minimum="-50" Maximum="50" Value="0" 
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="DefaultXSlider_ValueChanged"/>
                                        <Button x:Name="DefaultXPlus" Grid.Column="4" Content="â–º" FontSize="20" Height="50" Click="DefaultXPlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="DefaultXValue" Grid.Row="0" Grid.Column="2" 
                                               Text="0 px" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                    
                                    <!-- Vertical Offset -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Vertical:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="1" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="DefaultYMinus" Grid.Column="0" Content="â–²" FontSize="20" Height="50" Click="DefaultYMinus_Click"/>
                                        <Slider x:Name="DefaultYSlider" Grid.Column="2" 
                                                Minimum="-50" Maximum="50" Value="0" 
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="DefaultYSlider_ValueChanged"/>
                                        <Button x:Name="DefaultYPlus" Grid.Column="4" Content="â–¼" FontSize="20" Height="50" Click="DefaultYPlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="DefaultYValue" Grid.Row="1" Grid.Column="2" 
                                               Text="0 px" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                </Grid>
                            </GroupBox>
                            
                            <!-- Test Print Button -->
                            <Button Grid.Row="3" x:Name="TestPrintDefault" 
                                    Content="ðŸ–¨ï¸ TEST PRINT" 
                                    Height="60" Width="250"
                                    FontSize="18" FontWeight="Bold"
                                    Background="#FF9800" Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,20,0,0"
                                    Click="TestPrintDefault_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="30">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            </Grid>
                            
                            <!-- Visual Preview Section -->
                            <Border Grid.Column="2" 
                                    Background="#1E1E1E" 
                                    BorderBrush="#555555" 
                                    BorderThickness="2" 
                                    CornerRadius="5"
                                    Margin="0,40,0,0">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="Preview (4x6 Portrait)" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    
                                    <!-- Preview Canvas -->
                                    <Border Grid.Row="1" 
                                            Background="White" 
                                            Width="200" 
                                            Height="300"
                                            VerticalAlignment="Top">
                                        <Canvas x:Name="DefaultPreviewCanvas" 
                                                Width="200" 
                                                Height="300"
                                                ClipToBounds="True">
                                            <!-- Page border -->
                                            <Rectangle Width="200" Height="300" 
                                                       Stroke="Black" 
                                                       StrokeThickness="1"
                                                       StrokeDashArray="2,2"/>
                                            
                                            <!-- Image preview -->
                                            <Border x:Name="DefaultImagePreview"
                                                    Width="180" 
                                                    Height="270"
                                                    Canvas.Left="10" 
                                                    Canvas.Top="15"
                                                    Background="#FFE0E0E0">
                                                <Grid>
                                                    <!-- Grid lines -->
                                                    <Path Stroke="LightGray" StrokeThickness="0.5">
                                                        <Path.Data>
                                                            <GeometryGroup>
                                                                <LineGeometry StartPoint="0,45" EndPoint="180,45"/>
                                                                <LineGeometry StartPoint="0,90" EndPoint="180,90"/>
                                                                <LineGeometry StartPoint="0,135" EndPoint="180,135"/>
                                                                <LineGeometry StartPoint="0,180" EndPoint="180,180"/>
                                                                <LineGeometry StartPoint="0,225" EndPoint="180,225"/>
                                                                <LineGeometry StartPoint="45,0" EndPoint="45,270"/>
                                                                <LineGeometry StartPoint="90,0" EndPoint="90,270"/>
                                                                <LineGeometry StartPoint="135,0" EndPoint="135,270"/>
                                                            </GeometryGroup>
                                                        </Path.Data>
                                                    </Path>
                                                    
                                                    <!-- Center lines -->
                                                    <Path Stroke="Blue" StrokeThickness="1">
                                                        <Path.Data>
                                                            <GeometryGroup>
                                                                <LineGeometry StartPoint="90,0" EndPoint="90,270"/>
                                                                <LineGeometry StartPoint="0,135" EndPoint="180,135"/>
                                                            </GeometryGroup>
                                                        </Path.Data>
                                                    </Path>
                                                    
                                                    <!-- Border -->
                                                    <Rectangle Stroke="Red" StrokeThickness="2"/>
                                                    
                                                    <!-- Label -->
                                                    <TextBlock Text="IMAGE" 
                                                               FontSize="20" 
                                                               FontWeight="Bold"
                                                               Foreground="Black"
                                                               Opacity="0.3"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </Canvas>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                    
                    <!-- 2x6 Printer Tab -->
                    <TabItem Header="2x6 Strip Printer">
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Controls Section -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            
                            <!-- Printer Name Display -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Selected Printer:" Foreground="#AAAAAA" FontSize="14"/>
                                <TextBlock x:Name="Printer2x6Name" Text="Not Selected" Foreground="White" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <!-- Scale Adjustments -->
                            <GroupBox Grid.Row="1" Header="Size Adjustment (Aspect Ratio Locked)" Foreground="White" BorderBrush="#555555" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Size Scale -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Scale:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="Strip2x6ScaleMinus" Grid.Column="0" Content="-" FontSize="24" Height="50" Click="Strip2x6ScaleMinus_Click"/>
                                        <Slider x:Name="Strip2x6ScaleSlider" Grid.Column="2" 
                                                Minimum="0.8" Maximum="1.2" Value="1.0" 
                                                TickFrequency="0.01" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="Strip2x6ScaleSlider_ValueChanged"/>
                                        <Button x:Name="Strip2x6ScalePlus" Grid.Column="4" Content="+" FontSize="24" Height="50" Click="Strip2x6ScalePlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="Strip2x6ScaleValue" Grid.Row="0" Grid.Column="2" 
                                               Text="100%" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                </Grid>
                            </GroupBox>
                            
                            <!-- Position Adjustments -->
                            <GroupBox Grid.Row="2" Header="Position Adjustment (pixels)" Foreground="White" BorderBrush="#555555" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"/>
                                        <RowDefinition Height="60"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Horizontal Offset -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Horizontal:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="Strip2x6XMinus" Grid.Column="0" Content="â—„" FontSize="20" Height="50" Click="Strip2x6XMinus_Click"/>
                                        <Slider x:Name="Strip2x6XSlider" Grid.Column="2" 
                                                Minimum="-50" Maximum="50" Value="0" 
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="Strip2x6XSlider_ValueChanged"/>
                                        <Button x:Name="Strip2x6XPlus" Grid.Column="4" Content="â–º" FontSize="20" Height="50" Click="Strip2x6XPlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="Strip2x6XValue" Grid.Row="0" Grid.Column="2" 
                                               Text="0 px" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                    
                                    <!-- Vertical Offset -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Vertical:" Foreground="White" FontSize="16" VerticalAlignment="Center" Width="80"/>
                                    <Grid Grid.Row="1" Grid.Column="1" Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="Strip2x6YMinus" Grid.Column="0" Content="â–²" FontSize="20" Height="50" Click="Strip2x6YMinus_Click"/>
                                        <Slider x:Name="Strip2x6YSlider" Grid.Column="2" 
                                                Minimum="-50" Maximum="50" Value="0" 
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" ValueChanged="Strip2x6YSlider_ValueChanged"/>
                                        <Button x:Name="Strip2x6YPlus" Grid.Column="4" Content="â–¼" FontSize="20" Height="50" Click="Strip2x6YPlus_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="Strip2x6YValue" Grid.Row="1" Grid.Column="2" 
                                               Text="0 px" Foreground="White" FontSize="18" FontWeight="Bold" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                </Grid>
                            </GroupBox>
                            
                            <!-- Test Print Button -->
                            <Button Grid.Row="3" x:Name="TestPrint2x6" 
                                    Content="ðŸ–¨ï¸ TEST PRINT 2x6" 
                                    Height="60" Width="250"
                                    FontSize="18" FontWeight="Bold"
                                    Background="#FF9800" Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,20,0,0"
                                    Click="TestPrint2x6_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="30">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            </Grid>
                            
                            <!-- Visual Preview Section for 2x6 (shows as 4x6 landscape) -->
                            <Border Grid.Column="2" 
                                    Background="#1E1E1E" 
                                    BorderBrush="#555555" 
                                    BorderThickness="2" 
                                    CornerRadius="5"
                                    Margin="0,40,0,0">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="Preview (4x6 Portrait - 2 Strips)" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    
                                    <!-- Preview Canvas -->
                                    <Border Grid.Row="1" 
                                            Background="White" 
                                            Width="200" 
                                            Height="300"
                                            VerticalAlignment="Top">
                                        <Canvas x:Name="Strip2x6PreviewCanvas" 
                                                Width="200" 
                                                Height="300"
                                                ClipToBounds="True">
                                            <!-- Page border -->
                                            <Rectangle Width="200" Height="300" 
                                                       Stroke="Black" 
                                                       StrokeThickness="1"
                                                       StrokeDashArray="2,2"/>
                                            
                                            <!-- Image preview -->
                                            <Border x:Name="Strip2x6ImagePreview"
                                                    Width="180" 
                                                    Height="270"
                                                    Canvas.Left="10" 
                                                    Canvas.Top="15"
                                                    Background="#FFE0E0E0">
                                                <Grid>
                                                    <!-- Grid lines -->
                                                    <Path Stroke="LightGray" StrokeThickness="0.5">
                                                        <Path.Data>
                                                            <GeometryGroup>
                                                                <LineGeometry StartPoint="0,67.5" EndPoint="180,67.5"/>
                                                                <LineGeometry StartPoint="0,135" EndPoint="180,135"/>
                                                                <LineGeometry StartPoint="0,202.5" EndPoint="180,202.5"/>
                                                                <LineGeometry StartPoint="45,0" EndPoint="45,270"/>
                                                                <LineGeometry StartPoint="90,0" EndPoint="90,270"/>
                                                                <LineGeometry StartPoint="135,0" EndPoint="135,270"/>
                                                            </GeometryGroup>
                                                        </Path.Data>
                                                    </Path>
                                                    
                                                    <!-- Strip separation line (horizontal for portrait) -->
                                                    <Path Stroke="Green" StrokeThickness="2" StrokeDashArray="4,2">
                                                        <Path.Data>
                                                            <LineGeometry StartPoint="0,135" EndPoint="180,135"/>
                                                        </Path.Data>
                                                    </Path>
                                                    
                                                    <!-- Center lines -->
                                                    <Path Stroke="Blue" StrokeThickness="1">
                                                        <Path.Data>
                                                            <GeometryGroup>
                                                                <LineGeometry StartPoint="90,0" EndPoint="90,270"/>
                                                                <LineGeometry StartPoint="0,67.5" EndPoint="180,67.5"/>
                                                                <LineGeometry StartPoint="0,202.5" EndPoint="180,202.5"/>
                                                            </GeometryGroup>
                                                        </Path.Data>
                                                    </Path>
                                                    
                                                    <!-- Border -->
                                                    <Rectangle Stroke="Red" StrokeThickness="2"/>
                                                    
                                                    <!-- Labels -->
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" 
                                                                   Text="STRIP 1" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   Opacity="0.3"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Row="1" 
                                                                   Text="STRIP 2" 
                                                                   FontSize="16" 
                                                                   FontWeight="Bold"
                                                                   Foreground="Black"
                                                                   Opacity="0.3"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Canvas>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
            
            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Reset Button -->
                <Button x:Name="ResetButton" 
                        Grid.Column="0"
                        Content="RESET" 
                        Height="70"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="#FF5722"
                        Foreground="White"
                        BorderBrush="#E64A19"
                        BorderThickness="1"
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Cancel Button -->
                <Button x:Name="CancelButton" 
                        Grid.Column="2"
                        Content="CANCEL" 
                        Height="70"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="#3A3A3A"
                        Foreground="White"
                        BorderBrush="#555555"
                        BorderThickness="1"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Save Button -->
                <Button x:Name="SaveButton" 
                        Grid.Column="4"
                        Content="SAVE" 
                        Height="70"
                        FontSize="20"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#45a049"
                        BorderThickness="1"
                        Click="SaveButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>