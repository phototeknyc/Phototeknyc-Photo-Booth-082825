<Window x:Class="Photobooth.Windows.PhotoboothTemplateSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Choose Your Photo Layout" 
        Height="800" Width="1200"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TouchButton" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#666"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="BorderBrush" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                                <Setter Property="BorderBrush" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TemplateCard" TargetType="Border">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#666"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" BorderBrush="#555" BorderThickness="0,0,0,2">
            <Grid>
                <TextBlock Text="{Binding EventTitle}" 
                          FontSize="32" FontWeight="Bold" Foreground="White"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <TextBlock Text="Choose Your Photo Layout" 
                          FontSize="18" Foreground="#CCC"
                          HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                          Margin="0,0,0,10"/>
            </Grid>
        </Border>

        <!-- Template Selection -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="TemplatesItemsControl" 
                         ItemsSource="{Binding Templates}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource TemplateCard}" 
                               Width="280" Height="350"
                               MouseLeftButtonDown="TemplateCard_Click"
                               Tag="{Binding}">
                            
                            <StackPanel Margin="20">
                                <!-- Template Preview -->
                                <Border Background="#222" Height="180" CornerRadius="8" Margin="0,0,0,15">
                                    <Grid>
                                        <Image Source="{Binding ThumbnailImageSource}" 
                                              Stretch="UniformToFill"/>
                                        
                                        <TextBlock Text="📷" FontSize="48" Foreground="#666"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Template Info -->
                                <TextBlock Text="{Binding Name}" 
                                          FontSize="20" FontWeight="Bold" Foreground="White"
                                          TextTrimming="CharacterEllipsis" TextAlignment="Center"
                                          Margin="0,0,0,8"/>
                                
                                <TextBlock Text="{Binding Description}" 
                                          FontSize="14" Foreground="#CCC"
                                          TextTrimming="CharacterEllipsis" TextAlignment="Center"
                                          MaxHeight="40" TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>
                                
                                <TextBlock Text="{Binding PhotoCountText}" 
                                          FontSize="16" FontWeight="SemiBold" Foreground="#0078D4"
                                          TextAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Hover Effect -->
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                          To="#0078D4" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#404040" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                
                                <EventTrigger RoutedEvent="Border.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                          To="#666666" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#333333" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Actions -->
        <Border Grid.Row="2" Background="#2D2D2D" BorderBrush="#555" BorderThickness="0,2,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <Button Style="{StaticResource TouchButton}"
                       Content="❌ Cancel" FontSize="24"
                       Width="200" Height="60"
                       Click="Cancel_Click"/>
                
            </StackPanel>
        </Border>
        
    </Grid>
</Window>