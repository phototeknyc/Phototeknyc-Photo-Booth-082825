<Window x:Class="Photobooth.Windows.GalleryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photobooth.Windows"
        mc:Ignorable="d"
        Title="Photo Gallery" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Session Group Header Style -->
        <Style x:Key="SessionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10,15,10,5"/>
        </Style>
        
        <!-- Photo Thumbnail Style -->
        <Style x:Key="PhotoThumbnailStyle" TargetType="Border">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2A2A2A" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📸 Event Gallery" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,20,0"/>
                    
                    <TextBlock x:Name="photoCountText" 
                               Text="0 photos in 0 sessions" 
                               FontSize="16" 
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- View Mode Toggle -->
                    <RadioButton x:Name="gridViewRadio" 
                                 Content="Grid View" 
                                 IsChecked="True"
                                 Foreground="White" 
                                 Margin="10,0"
                                 VerticalAlignment="Center"
                                 Checked="ViewMode_Changed"/>
                    <RadioButton x:Name="listViewRadio" 
                                 Content="List View" 
                                 Foreground="White" 
                                 Margin="10,0"
                                 VerticalAlignment="Center"
                                 Checked="ViewMode_Changed"/>
                    
                    <Button Content="🔄 Refresh" 
                            Click="RefreshButton_Click"
                            Margin="20,0,10,0"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"/>
                    
                    <Button Content="✖ Close" 
                            Click="CloseButton_Click"
                            Padding="10,5"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Gallery Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
            <ItemsControl x:Name="sessionsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <!-- Session Header -->
                            <Border Background="#2A2A2A" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding SessionName}" 
                                               Style="{StaticResource SessionHeaderStyle}"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding SessionTime}" 
                                               FontSize="14" 
                                               Foreground="#AAAAAA"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding PhotoCount}" 
                                               FontSize="14" 
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"
                                               Margin="10"/>
                                </Grid>
                            </Border>
                            
                            <!-- Photos in Session -->
                            <ItemsControl ItemsSource="{Binding Photos}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PhotoThumbnailStyle}"
                                                MouseLeftButtonUp="Photo_Click"
                                                Tag="{Binding FilePath}">
                                            <Grid>
                                                <!-- Photo Thumbnail -->
                                                <Image Source="{Binding ThumbnailPath}" 
                                                       Stretch="UniformToFill"/>
                                                
                                                <!-- Photo Type Badge -->
                                                <Border Background="{Binding TypeBadgeColor}" 
                                                        CornerRadius="4"
                                                        Padding="5,2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="5">
                                                    <TextBlock Text="{Binding PhotoType}" 
                                                               Foreground="White" 
                                                               FontSize="11"
                                                               FontWeight="Bold"/>
                                                </Border>
                                                
                                                <!-- Photo Info Overlay -->
                                                <Border Background="#CC000000" 
                                                        VerticalAlignment="Bottom">
                                                    <StackPanel Margin="5">
                                                        <TextBlock Text="{Binding FileName}" 
                                                                   Foreground="White" 
                                                                   FontSize="11"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding FileSize}" 
                                                                   Foreground="#AAAAAA" 
                                                                   FontSize="10"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2A2A2A" Padding="10,5">
            <Grid>
                <TextBlock x:Name="statusText" 
                           Text="Ready" 
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Left"/>
                
                <TextBlock x:Name="selectedInfoText" 
                           Text="" 
                           Foreground="#4CAF50"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        
        <!-- Full Screen Image Viewer Overlay -->
        <Grid x:Name="imageViewerOverlay" 
              Grid.RowSpan="3" 
              Background="#E0000000" 
              Visibility="Collapsed"
              MouseLeftButtonUp="ImageViewerOverlay_Click">
            <Grid>
                <Image x:Name="fullScreenImage" 
                       Stretch="Uniform"
                       Margin="50"/>
                
                <!-- Close Button -->
                <Button Content="✖" 
                        Click="CloseImageViewer_Click"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="20"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="20"/>
                
                <!-- Navigation Buttons -->
                <Button x:Name="prevImageButton" 
                        Content="◀" 
                        Click="PrevImage_Click"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="20"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="24"/>
                
                <Button x:Name="nextImageButton" 
                        Content="▶" 
                        Click="NextImage_Click"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="20"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="24"/>
            </Grid>
        </Grid>
    </Grid>
</Window>