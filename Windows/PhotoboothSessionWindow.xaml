<Window x:Class="Photobooth.Windows.PhotoboothSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Photobooth Session" 
        Height="1080" Width="1920"
        Background="#000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TouchButton" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#666"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="BorderBrush" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#222"/>
                                <Setter Property="Foreground" Value="#666"/>
                                <Setter Property="BorderBrush" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CountdownText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF6B6B"/>
            <Setter Property="FontSize" Value="120"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="Black" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Header with Progress -->
        <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding EventTitle}" 
                          FontSize="24" FontWeight="SemiBold" Foreground="White"
                          HorizontalAlignment="Left" VerticalAlignment="Center" 
                          Margin="20,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ProgressText}" 
                              FontSize="20" Foreground="#CCC"
                              VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <ProgressBar Width="200" Height="8" 
                               Value="{Binding ProgressPercentage}" Maximum="100"
                               Background="#333" Foreground="#0078D4" BorderThickness="0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2" Text="{Binding TemplateInfo}" 
                          FontSize="18" Foreground="#999"
                          HorizontalAlignment="Right" VerticalAlignment="Center" 
                          Margin="20,0"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            
            <!-- Camera Live View -->
            <Border x:Name="CameraPreview" 
                   Background="#111" BorderBrush="#333" BorderThickness="2"
                   CornerRadius="8" Margin="50">
                
                <Grid>
                    <!-- Live camera feed would go here -->
                    <Rectangle Fill="#222"/>
                    <TextBlock Text="📷 Camera Preview" 
                              FontSize="48" Foreground="#666"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <!-- Template Overlay (Optional) -->
                    <Canvas x:Name="TemplateOverlay" 
                           Background="Transparent"
                           Visibility="Collapsed"/>
                    
                    <!-- Countdown Overlay -->
                    <Grid x:Name="CountdownOverlay" 
                          Background="#80000000" 
                          Visibility="Collapsed">
                        
                        <TextBlock x:Name="CountdownText" 
                                  Style="{StaticResource CountdownText}"
                                  Text="3"/>
                        
                        <TextBlock Text="Get Ready!" 
                                  FontSize="36" Foreground="White"
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  Margin="0,150,0,0"/>
                    </Grid>
                    
                    <!-- Flash Effect -->
                    <Rectangle x:Name="FlashOverlay" 
                              Fill="White" 
                              Opacity="0"
                              Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Instructions -->
            <TextBlock x:Name="InstructionText" 
                      Text="{Binding CurrentInstruction}"
                      FontSize="28" FontWeight="SemiBold" Foreground="White"
                      HorizontalAlignment="Center" VerticalAlignment="Top"
                      Margin="0,20,0,0" TextAlignment="Center"/>

        </Grid>

        <!-- Photo Preview Strip -->
        <Border Grid.Row="2" Background="#1A1A1A" BorderBrush="#333" BorderThickness="0,2,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="PhotoPreviewList" 
                             ItemsSource="{Binding CapturedPhotos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Margin="20,10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#333" BorderBrush="#666" BorderThickness="2" 
                                   CornerRadius="8" Margin="5" Width="150" Height="150">
                                
                                <Grid>
                                    <Image Source="{Binding PreviewImage}" 
                                          Stretch="UniformToFill"/>
                                    
                                    <Border Background="#80000000" 
                                           VerticalAlignment="Bottom" Height="30">
                                        <TextBlock Text="{Binding PhotoNumber}" 
                                                  Foreground="White" FontSize="14" FontWeight="Bold"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Processing indicator -->
                                    <Grid Background="#80000000">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="⚙️" FontSize="24" Foreground="White" 
                                                      HorizontalAlignment="Center"/>
                                            <TextBlock Text="Processing..." FontSize="12" Foreground="White" 
                                                      HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#2D2D2D" BorderBrush="#555" BorderThickness="0,2,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <Button x:Name="CaptureButton" 
                       Style="{StaticResource TouchButton}"
                       Content="📷 Take Photo" 
                       Width="250" Height="60"
                       Click="CaptureButton_Click"
                       IsEnabled="{Binding CanCapture}"/>
                
                <Button x:Name="RetakeButton" 
                       Style="{StaticResource TouchButton}"
                       Content="🔄 Retake" 
                       Width="200" Height="60"
                       Click="RetakeButton_Click"
                       IsEnabled="{Binding CanRetake}"/>
                
                <Button x:Name="FinishButton" 
                       Style="{StaticResource TouchButton}"
                       Content="✅ Finish" 
                       Width="200" Height="60"
                       Click="FinishButton_Click"
                       IsEnabled="{Binding CanFinish}"/>
                
                <Button x:Name="CancelButton" 
                       Style="{StaticResource TouchButton}"
                       Content="❌ Cancel" 
                       Width="200" Height="60"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>