<Window x:Class="Photobooth.Windows.PrinterProfileConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configure Printer Profiles" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock Text="Printer Profile Configuration" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profile List -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Profiles" 
                               Grid.Row="0"
                               Padding="10" 
                               FontWeight="Bold" 
                               Background="#E0E0E0"/>
                    
                    <ListBox x:Name="ProfileListBox" 
                             Grid.Row="1"
                             SelectionChanged="ProfileListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" Padding="10,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="2" 
                            Content="Add Profile" 
                            Click="AddProfile_Click"
                            Margin="10"
                            Padding="5"/>
                </Grid>
            </Border>
            
            <!-- Profile Settings -->
            <Border Grid.Column="1" Background="White" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Profile Settings" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Profile Name -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Profile Name:" VerticalAlignment="Center"/>
                            <TextBox x:Name="ProfileNameTextBox" Grid.Column="1" IsReadOnly="True"/>
                        </Grid>
                        
                        <!-- Printer Selection -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Printer:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="PrinterComboBox" Grid.Column="1"/>
                        </Grid>
                        
                        <!-- Paper Size -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Paper Size:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="PaperSizeComboBox" Grid.Column="1">
                                <ComboBoxItem Content="4x6"/>
                                <ComboBoxItem Content="2x6"/>
                                <ComboBoxItem Content="5x7"/>
                                <ComboBoxItem Content="8x10"/>
                                <ComboBoxItem Content="Letter"/>
                                <ComboBoxItem Content="A4"/>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Orientation -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Orientation:" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <RadioButton x:Name="PortraitRadio" Content="Portrait" Margin="0,0,20,0" IsChecked="True"/>
                                <RadioButton x:Name="LandscapeRadio" Content="Landscape"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Print Quality -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Quality:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="QualityComboBox" Grid.Column="1">
                                <ComboBoxItem Content="Draft"/>
                                <ComboBoxItem Content="Normal"/>
                                <ComboBoxItem Content="High" IsSelected="True"/>
                                <ComboBoxItem Content="Maximum"/>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Margins -->
                        <TextBlock Text="Margins (inches):" FontWeight="Bold" Margin="0,15,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Left:" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBox x:Name="MarginLeftTextBox" Grid.Column="1" Text="0"/>
                            <TextBlock Text="Top:" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox x:Name="MarginTopTextBox" Grid.Column="3" Text="0"/>
                            <TextBlock Text="Right:" Grid.Column="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox x:Name="MarginRightTextBox" Grid.Column="5" Text="0"/>
                            <TextBlock Text="Bottom:" Grid.Column="6" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox x:Name="MarginBottomTextBox" Grid.Column="7" Text="0"/>
                        </Grid>
                        
                        <!-- Advanced Options -->
                        <Expander Header="Advanced Options" Margin="0,15,0,0">
                            <StackPanel Margin="0,10,0,0">
                                <CheckBox x:Name="SkipDevModeCheckBox" 
                                          Content="Skip DEVMODE settings (use application settings only)" 
                                          Margin="0,0,0,10"/>
                                <CheckBox x:Name="ForceOrientationCheckBox" 
                                          Content="Force orientation regardless of image dimensions" 
                                          Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Copies:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="CopiesTextBox" Grid.Column="1" Text="1" Width="50" HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <!-- Enable 2 Inch Cut -->
                                <CheckBox x:Name="Enable2InchCutCheckBox" 
                                          Content="Enable 2 inch cut (for photo strips)" 
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Configure in Printer Properties" 
                                    Click="ConfigurePrinter_Click"
                                    Padding="10,5" 
                                    Margin="0,0,10,0"
                                    Background="#FF9800"
                                    Foreground="White"/>
                            <Button Content="Test Print" 
                                    Click="TestPrint_Click"
                                    Padding="10,5" 
                                    Margin="0,0,10,0"
                                    Background="#4CAF50"
                                    Foreground="White"/>
                            <Button Content="Save Profile" 
                                    Click="SaveProfile_Click"
                                    Padding="10,5"
                                    Background="#2196F3"
                                    Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="15">
            <Grid>
                <TextBlock Text="Profiles are saved persistently and will be restored when the application restarts" 
                           Foreground="Gray" 
                           FontStyle="Italic"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Import Profiles" 
                            Click="ImportProfiles_Click"
                            Padding="10,5" 
                            Margin="0,0,10,0"/>
                    <Button Content="Export Profiles" 
                            Click="ExportProfiles_Click"
                            Padding="10,5" 
                            Margin="0,0,10,0"/>
                    <Button Content="Close" 
                            Click="Close_Click"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>