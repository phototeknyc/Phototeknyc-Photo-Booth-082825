<Page x:Class="PhotoboothWPF.Pages.Camera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoboothWPF.Pages"
      mc:Ignorable="d" 
      MinWidth="1200" MinHeight="700" Background="#333333"
      Title="Camera">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.Row="0" BorderBrush="#ccc" BorderThickness=".5">
                    <StackPanel >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                            <ComboBox VerticalAlignment="Center" Width="262" Height="30">
                                <ComboBoxItem Content="Select Camera" IsSelected="True"/>
                                <ComboBoxItem Content="Camera 1"/>
                                <ComboBoxItem Content="Camera 2"/>
                                <ComboBoxItem Content="Camera 3"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" >
                            <Button x:Name="btnCapture" Content="Connect to Sony Camera" Width="262" Height="30" Margin="10" />
                            <Button x:Name="btnSave" Content="Connect to Nikon Wifi" Width="262" Height="30" Margin="10"/>
                        </StackPanel>
                        <Border CornerRadius="10"  BorderThickness="1" BorderBrush="#FFEDEDED" Height="248" Width="262" Margin="0,30,0,0">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock  Text="Control" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="#FFEDEDED" Background="#333333" Margin="9,-17,0,0" Width="69" />
                                <StackPanel Orientation="Vertical" Height="108" Margin="0,37,0,0" HorizontalAlignment="Center" Width="262">
                                    <Button Content="Capture" Width="114" Height="30" Margin="10" />
                                    <Button  Content="Live View" Width="114" Height="30" Margin="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>
                <Image x:Name="imgCamera" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" Margin="0,0,0,0"/>
            </Grid>
        </StackPanel>
        <!--<Border Grid.Column="0" Grid.Row="1" CornerRadius="10" Background="#FFEDEDED" BorderThickness="0" Padding="3"  Margin="5">
            <RichTextBox  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="200" MinWidth="1200"  IsReadOnly="True" BorderThickness="0" FontSize="20" FontFamily="Segoe UI" Padding="20,0,0,0" Background="#FFEDEDED" SelectionTextBrush="Black">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Connection Device Started" Foreground="#FF060606"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>-->
    </Grid>
</Page>
