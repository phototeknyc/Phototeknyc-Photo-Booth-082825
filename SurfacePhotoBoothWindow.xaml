<Window x:Class="Photobooth.SurfacePhotoBoothWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Photobooth"
        mc:Ignorable="d"
        Title="PhotoBooth Pro - Surface Edition"
        WindowState="Maximized"
        WindowStyle="None"
        Topmost="False"
        Background="#1E1E1E"
        AllowsTransparency="False"
        AllowDrop="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Unspecified"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Surface Pro Optimized Colors -->
        <Color x:Key="PrimaryColor">#0A0E27</Color>
        <Color x:Key="SecondaryColor">#1A1E37</Color>
        <Color x:Key="AccentColor">#00D9FF</Color>
        <Color x:Key="AccentPurple">#7928CA</Color>
        <Color x:Key="AccentPink">#FF0080</Color>
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#B8BCC8</Color>
        
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#0A0E27" Offset="0"/>
            <GradientStop Color="#1A1E37" Offset="0.5"/>
            <GradientStop Color="#0A0E27" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
            <GradientStop Color="{StaticResource AccentPurple}" Offset="0.5"/>
            <GradientStop Color="{StaticResource AccentPink}" Offset="1"/>
        </LinearGradientBrush>

        <!-- Touch-Optimized Button Style (60px minimum touch target) -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" 
                                                  BlurRadius="10" 
                                                  ShadowDepth="2" 
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Card Style -->
        <Style x:Key="NavCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#2A2E47" Opacity="0.9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animations -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SlideInFromRight">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="500" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <!-- Background with subtle gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0E27" Offset="0"/>
                <GradientStop Color="#0F1329" Offset="0.5"/>
                <GradientStop Color="#1A1E37" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>  <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="80"/>   <!-- Bottom Navigation -->
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border x:Name="HeaderBorder" Grid.Row="0" Background="{StaticResource HeaderGradient}">
            <Grid Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="60" Height="60" CornerRadius="30">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource AccentColor}" Offset="0"/>
                                <GradientStop Color="{StaticResource AccentPurple}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="📸" FontSize="28" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="PHOTOBOOTH PRO" 
                                   FontSize="28" 
                                   FontWeight="Light"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Surface Edition" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Center Status -->
                <StackPanel Grid.Column="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Border Background="#00FF88" 
                            Width="12" Height="12" 
                            CornerRadius="6"
                            Margin="0,0,10,0"/>
                    <TextBlock Text="Camera Ready" 
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button x:Name="MinimizeBtn"
                            Style="{StaticResource TouchButtonStyle}"
                            Width="50" Height="50"
                            Click="MinimizeWindow_Click"
                            Margin="0,0,10,0">
                        <TextBlock Text="─" FontSize="20"/>
                    </Button>
                    <Button x:Name="CloseBtn"
                            Style="{StaticResource TouchButtonStyle}"
                            Width="50" Height="50"
                            Background="#E74C3C"
                            Click="CloseWindow_Click">
                        <TextBlock Text="✕" FontSize="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40,20">
            <!-- Navigation Grid for Surface Pro -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <ItemsControl x:Name="NavigationGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <!-- Navigation Cards -->
                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToTemplates_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="📋" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Templates" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Design and manage layouts" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToCamera_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="📷" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Camera" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Live view and capture" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToPhotoBooth_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#667EEA" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="🎪" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Photo Booth" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Touch kiosk mode" 
                                       FontSize="14"
                                       Foreground="#E0E0E0"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <!-- Modern Photo Booth (Refactored) -->
                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToPhotoBoothModern_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF4081" Offset="0"/>
                                <GradientStop Color="#7C4DFF" Offset="0.5"/>
                                <GradientStop Color="#00BCD4" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#FF4081" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="✨" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Modern Booth" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Modular interface" 
                                       FontSize="14"
                                       Foreground="#E0E0E0"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToEvents_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="🎉" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Events" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Manage event sessions" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToGallery_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="🖼️" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Local Gallery" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="View local photos" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToCloudGallery_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00D9FF" Offset="0"/>
                                <GradientStop Color="#7928CA" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="☁️" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Cloud Gallery" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="View all events online" 
                                       FontSize="14"
                                       Foreground="White"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToCameraSettings_Click">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="🎛️" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Camera Settings" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Configure camera options" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToPhotoboothSettings_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4A5568" Offset="0"/>
                                <GradientStop Color="#2D3748" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="⚙️" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Photobooth Settings" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Configure photobooth options" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>

                    <!-- UI Customize Tile -->
                    <Border Style="{StaticResource NavCardStyle}"
                            Width="300" Height="180"
                            MouseLeftButtonDown="NavigateToUICustomize_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4ECDC4" Offset="0"/>
                                <GradientStop Color="#3BA89F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="✨" FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="UI Customize" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,0,0"/>
                            <TextBlock Text="Design custom UI layouts" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20"/>
                        </Grid>
                    </Border>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Quick Actions Bar (Always visible, high z-index) -->
        <Border x:Name="BottomBorder" Grid.Row="2" Grid.RowSpan="1"
                Background="{StaticResource SecondaryBrush}"
                Panel.ZIndex="100">
            <Grid Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Information -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Ellipse x:Name="CameraStatusIndicator"
                             Width="12" Height="12" 
                             Fill="#00FF88"
                             Margin="0,0,10,0"/>
                    <TextBlock x:Name="CameraStatusText"
                               Text="📷 Canon EOS R5" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,20,0"/>
                    <TextBlock x:Name="BatteryStatusText"
                               Text="🔋 85%" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,20,0"/>
                    <TextBlock x:Name="PhotoCountText"
                               Text="💾 1,234 Photos Today" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Home Button (visible when in content pages) -->
                <Button Grid.Column="1"
                        x:Name="HomeButton"
                        Style="{StaticResource TouchButtonStyle}"
                        Background="{StaticResource SecondaryBrush}"
                        Width="140" Height="60"
                        Click="HomeButton_Click"
                        Visibility="Collapsed"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Home" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Photo Booth Button (Always visible) -->
                <Button Grid.Column="2"
                        x:Name="PhotoBoothButton"
                        Style="{StaticResource TouchButtonStyle}"
                        Width="200" Height="60"
                        Click="QuickCapture_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#7928CA" Offset="0.5"/>
                            <GradientStop Color="#00D9FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Effect>
                        <DropShadowEffect Color="#7928CA" 
                                          BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.5"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎪" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Photo Booth" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Content Frame (Hidden by default, shown when navigating) -->
        <Grid x:Name="ContentContainer" 
              Grid.Row="1" 
              Visibility="Collapsed">
            <!-- Back Button Overlay -->
            <Button x:Name="BackButton"
                    Style="{StaticResource TouchButtonStyle}"
                    Width="120" Height="60"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="40,20,0,0"
                    Background="{StaticResource SecondaryBrush}"
                    Click="BackButton_Click"
                    Panel.ZIndex="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Back" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
            
            <!-- Breadcrumb -->
            <TextBlock x:Name="BreadcrumbText"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,35,0,0"
                       FontSize="18"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Panel.ZIndex="10"/>
            
            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" 
                   NavigationUIVisibility="Hidden"
                   Margin="40,100,40,20"/>
        </Grid>
    </Grid>
</Window>